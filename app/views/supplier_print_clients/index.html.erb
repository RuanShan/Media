<% content_for :main_content do %>
<div class="main-content ">
  <div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
      <%= render 'partials/home' %>
      <li><%= link_to "微硬件", dashboard_supplier_prints_url %></li>
      <li><%= link_to "设备管理", '#' %></li>
    </ul>
    <%= render '/layouts/qrcode' %>
  </div>

    <div class="page-content">
        <div class="tabbable">
            <ul class="nav nav-tabs padding-24 tab-size-bigger">
                <li><%= link_to "基础设置", activities_supplier_prints_path(activity_id: 46) %><li>
                <li><%= link_to "帐号管理", supplier_prints_path(activity_id: 42) %></li>
                <li class="active"><%= link_to "设备管理", supplier_print_clients_path %></li>
            </ul>
            <div class="tab-content no-border padding-24">
                <div id="tab-3" class="tab-pane active in">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="equipTable" class="table table-striped table-bordered table-hover dataTable ">
                                <thead>
                                    <tr>
                                        <th>设备ID</th>
                                        <th>设备编号</th>
                                        <th>微信帐号</th>
                                        <th>网点名称</th>
                                        <th>mac地址</th>
                                        <th>是否广告设备</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @supplier_print_clients.each do |client| %>
                                    <tr>
                                        <td>
                                            <%= client.client_id %></td>
                                        <td>
                                            <%= client.client_no %></td>
                                        <td>
                                            <%= client.supplier_print.try(:public_name) %></td>
                                        <td>
                                            <%= client.net_name %></td>
                                        <td>
                                            <%= client.mac %></td>
                                        <td>
                                            <%= client.is_banner? ? "是" : "否" %></td>
                                        <td>
                                            <!-- <a href="business_editPrint">编辑</a>
                                        -->
                                        <%= link_to '编辑', edit_supplier_print_client_path(client) %>

<a href="javascript:void(0);" data-toggle="modals" data-title="广告图片" data-height="1000" data-width="650" data-iframe="<%= supplier_print_client_supplier_print_pictures_path(client) %>">广告图片</a>

</td>
                                </tr>
                                <% end %></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<% end %>
