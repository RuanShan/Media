<% provide(:title, '校园环境') %>
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta content="black" name="apple-mobile-web-app-status-bar-style">
  <meta name="format-detection" content="telephone=no">
  <meta content="telephone=no" name="format-detection">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title><%=  content_for?(:title) ? yield(:title) : "微教育" %></title>
  <script type="text/javascript" src="/javascripts/jquery-1.8.2.min.js"></script>
  <link type="text/css" rel="stylesheet" href="/stylesheets/weddings/photoswipe.css"/>
  <script type="text/javascript" src="/javascripts/app/wedding/klass.min.js"></script>
  <script type="text/javascript" src="/javascripts/app/wedding/code.photoswipe-3.0.5.js"></script>

  <%= yield :head %>
  <%= csrf_meta_tags %>

</head>
<body>

<script type="text/javascript">

    (function(window, PhotoSwipe){

        document.addEventListener('DOMContentLoaded', function(){

            var
                    options = {
                        preventHide: true,
                        getImageSource: function(obj){
                            return obj.url;
                        },
                        getImageCaption: function(obj){
                            return obj.caption;
                        }
                    },
                    instance = PhotoSwipe.attach(
                            [{ url: '/assets/education/temp.png'},
                            { url: '/assets/education/temp1.png'},
                            { url: '/assets/education/temp2.png'}],
                            options
                    );

            instance.show(0);
        }, false);


    }(window, window.Code.PhotoSwipe));

</script>
</body>
</html>