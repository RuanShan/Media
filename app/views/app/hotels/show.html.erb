<%= javascript_include_tag 'jquery','jquery_ujs' %>
<header><% url = app_hotel_path(hotel_branch_id: @hotel_branch.id, aid: params[:aid], wxmuid: session[:wx_mp_user_id], check_in_date: params[:check_in_date], check_out_date: params[:check_out_date], page: 1, anchor: "mp.weixin.qq.com") %>
	<%= link_to "", list_app_hotels_path(aid: params[:aid], wxmuid: session[:wx_mp_user_id],check_in_date: params[:check_in_date], check_out_date: params[:check_out_date], page: 1), class: "ico-hd arr-hd" %>
  <h1><%= @hotel_branch.try(:name) %></h1>
</header>
<div class="contxt cont-artical">
  <div class="box-cont box-hotel">
		<% if @hotel_branch.hotel_pictures.count == 0 %>
      <div class="hotel-th"><span><%= image_tag (@hotel_branch.hotel_pictures.where(is_cover: true).first.try(:path) || '/assets/hotel/1.gif') %></span></div>
		<% else %>
      <div class="hotel-th"><span><%= link_to pictures_app_hotels_path(hotel_branch_id: @hotel_branch.id, url: url) do %><%= image_tag (@hotel_branch.hotel_pictures.where(is_cover: true).first.try(:path) || '/assets/hotel/1.gif') %><% end %></span></div>
		<% end %>
    <div class="hotel-td">
      <p><span class="ico ico-comment" onclick="javascript:window.location.href='<%= app_hotel_comments_path %>?aid=<%= params[:aid] %>&wxmuid=<%= session[:wx_mp_user_id] %>&branch_id=<%= @hotel_branch.try(:id) %>'"><%= @hotel_branch.hotel_comments.where('status > ?', HotelComment::DELETED).count %>条评论</span><i class="arrow arr-small"></i></p>
      <p><span class="ico ico-phone" onclick="javascript:window.location.href='tel:<%= @hotel_branch.tel%>'"><%= @hotel_branch.tel %><%= " 转 #{@hotel_branch.tel_extension}" if @hotel_branch.tel_extension? %></span><i class="arrow arr-small"></i></p>
    </div>
  </div>
  <div class="box-cont box-list">
		<a onclick="javascript:window.location.href='<%= map_app_hotels_path %>?address=<%= @hotel_branch.address %>&city_name=<%= @hotel_branch.city.try(:name) %>'">
			<span class="ico ico-location"><%= @hotel_branch.address %></span>
			<span class="arrow arr-small"></span>
		</a>
		<a href="http://api.map.baidu.com/geocoder?address=<%= @hotel_branch.city.try(:name) %><%= @hotel_branch.address%>&output=html">
			<span class="ico ico-nav">一键导航</span>
			<span class="arrow arr-small"></span>
		</a>
  </div>
  <div class="box-cont box-txt box-hotel-txt">
    <p><span>入住</span><b> <%= Date.parse(params[:check_in_date]).strftime("%m月%d日") %></b></p>
    <p><span>离店</span><b> <%= Date.parse(params[:check_out_date]).strftime("%m月%d日") %> （<%= (Date.parse(params[:check_out_date])-Date.parse(params[:check_in_date])).to_i %> 晚）</b></p>
  </div>
  <div class="box-cont box-list-room">
    <%= render :partial => 'app/hotels/hotel_room_types', :object => @hotel_room_types, :as => :hotel_room_type %>
  </div>
  <div class="tcenter"><% unless @hotel_room_types.last_page? %><a href="/app/hotels/<%= params[:id] %>?aid=<%= params[:aid] %>&wxmuid=<%= session[:wx_mp_user_id] %>&check_in_date=<%= params[:check_in_date] %>&check_out_date=<%= params[:check_out_date] %>&page=<%= (params[:page].present? ? params[:page].to_i+1 : 1) %>#mp.weixin.qq.com" class="loading" data-remote="true" rel="next" id="more_loading">点击查看更多...<%= params[:maxpage]%></a><% end %></div>
  <div class="tcenter"><div class="isloading loading" style="display: none">加载中...</div></div>
</div>

<script>
$( document ).ajaxStart(function() {
  $(".isloading").css("display",'');
  $("#more_loading").css("display","none");
});

$( document ).ajaxStop(function() {
  $(".isloading").css("display",'none');
  $("#more_loading").css("display","block");
});
</script>
