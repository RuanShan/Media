<% website_menu.sub_menus.each do |child| %>
    <div class="box box-list">
      <a class="box-block" href="<%= menu_url child %>"></a>
      <div class="hd">
        <b><%= child.name %></b>
        <!--<span><%#= date_format_full_l(child.created_at)  %></span>-->
      </div>
      <div class="bd">
        <%= image_tag child.is_a?(Assistant) ? child.pic.try(:thumb) : child.pic.try(:large) if child.pic? %>
      </div>
      <div class="ft">
        查看全文 >
      </div>
    </div>
<% end %>