<div class="ft ft-comment">
  <h3>热门评论</h3>
  <% if @comments.present? %>
    <% @comments.each do |comment| %>
      <div class="ft-list">
        <div class="fl">
          <span class="bd-img">
            <%= image_tag "/assets/life/user_logo.png" %>
          </span>
        </div>
        <div class="fr">
          <b><%= comment.name %></b>
          <span>
            <i class="fl"><%= date_format_full(comment.created_at) %> </i>
          </span>
          <p><%= comment.content %></p>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="ft-list" style="text-align: center">没有评论</div>
  <% end %>
</div>