<% state = %W[ready active stopped][ran.object.activity_status] %>
<% state_name ||= "活动" + %W[预热 开始 结束][ran.object.activity_status] %>    
<% no_description ||= false %>

<div class="form-group">
    <label>
        <%= state_name %>微信消息标题
        <span class="required-star">*</span>
    </label>
    <div class="clearfix">
        <%= ran.text_field :title, maxlength: 64, id: 'wx_title', class: "activity_title col-md-8", rel: 'ready_activity_title', validate: true, placeholder: "不能超过64个字" %>
    </div>
</div>

<div class="form-group">
    <label>
        <%= state_name %>微信消息图片
        <span class="required-star">*</span>
    </label>
    <div class="clearfix">
        <div data-name="activity[<%= state %>_activity_notice_attributes][qiniu_pic_key]" data-img="<%= ran.object.pic_url %>" data-key="<%= ran.object.qiniu_pic_key %>" class="cieldon-file width-100px" data-type="1" data-div="#img-1" data-height="200"></div>
        <small class="help-inline text-warning line-height-32">图片建议尺寸：720像素*400像素</small>
    </div>
</div>

<div class="form-group">
    <label>
        <%= state_name %>微信消息摘要
        <span class="required-star">*</span>
    </label>
    <div class="clearfix">
        <%= ran.text_area :summary, maxlength: 128, rows: 5, id: 'wx_summary', class: "activity_summary col-md-8", rel: 'ready_activity_notice_summary', placeholder: "不能超过128个字" %>
    </div>
</div>

<% unless no_description %>
    <div class="form-group">
        <label>
            <%= state_name %>说明
            <span class="required-star">*</span>
        </label>
        <div class="clearfix">
            <%= render "shared/form_rich_text", field_name: "description", obj: ran.object, f: ran, wrapper_html_options: {class: "col-md-11 activity_notice_description"}%>
            <%#= ran.text_area :description, maxlength: 128, rows: 5, class: "col-md-8 activity_notice_description", placeholder: "不能超过128个字" %>
        </div>
    </div>
<% end %>
