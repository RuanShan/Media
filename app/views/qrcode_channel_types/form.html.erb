<%= form_for @qrcode_channel_type, validate: true, html: { role: 'form' } do |f| %>
	<div class="modal-body">
    <div class="form-group">
      <label class="control-label">分类名称<span class="required-star">*</span></label>
      <div class="clearfix">
      	<%= f.text_field :name, class: "col-xs-12" %>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label">备注</label>
      <div class="clearfix">
      	<%= f.text_area :description, cols: 3, rows: 3, class: "form-control" %>
      </div>
    </div>
	</div>
	<div class="clearfix"></div>
	<div class="modal-footer">
	  <button type="submit" class="btn btn-sm btn-primary" data-fn="submit">确定</button>
	  <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
	</div>
<% end %>