<% content_for :main_content do %>
  <div class="main-content ">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <li><i class="icon-home home-icon"></i><%= link_to '首页', console_url %></li>
        <li><%= link_to '微活动', activities_path %></li>
        <li><%= link_to '我的营销活动', activities_path %></li>
      </ul>
      <%= render partial:'/layouts/qrcode' %>
    </div>

    <div class="page-content">
      <div class="row">
        <div class="col-sm-12">
          <%= search_form_for @search, url: {action: controller.action_name}, class: 'box-form form-row', html: { method: :get } do |f| %>
            <div class="col-md-3 row">
              <div class="input-group input-group-text">
                <span class="input-group-addon">活动名称：</span>
                <%= f.text_field :name_cont, class: 'col-xs-12', placeholder:"请输入活动名称" %>
              </div>
            </div>
            <div class="col-md-3">
              <div class="input-group input-group-text">
                <span class="input-group-addon">关键词：</span>
                <%= f.text_field :keyword_cont, class: 'col-xs-12', placeholder:"请输入关键词" %>
                <% if Activity::OPERATION_TYPE_IDS.include?(@activity_type_id) %>
                  <span >状态：</span>
                  <%= f.select :status_eq,  Activity.status_options_by_type_id(@activity_type_id), placeholder:"请选择状态" %>
                <% end %>
              </div>
            </div>
            <div class="col-md-3 row">
              <button type="submit" class="btn btn-primary btn-sm btn-filter">查询</button>
            </div>

            <%- unless (controller_name == "activities" && action_name == "index") %>
              <div class="col-md-3 row pull-right">
              <%- if Activity::OPERATION_TYPE_IDS.include?(@search.activity_type_id_eq) %>
                <%= link_to '新增', new_activity_path(activity_type: @search.activity_type_id_eq || 15), class: "btn btn-sm btn-primary pull-right" %>
              <%- else %>
                <%= link_to '新增', new_activity_path(activity_type: @search.activity_type_id_eq || 3), class: "btn btn-sm btn-primary pull-right" %>
              <%- end %>
              </div>
            <%- end %>
          <% end %>
        </div>

        <div class="col-md-12 margin-top-20">
          <table id="actTable" class="table table-striped table-bordered table-hover dataTable ">
            <thead>
              <tr>
                <th width="30%">活动名称</th>
                <th>关键词</th>
                <% if @activity_type_id == 14 %>
                  <th>团购状态</th>
                <% end %>
                <th>活动时间</th>
                <th>状态</th>
                <% if @activity_type_id == 15 %>
                  <th>题目</th>
                <% end %>
                <th width="15%">操作</th>
              </tr>
            </thead>
            <tbody>
              <% if @activities.each do |activity| %>
                <% activity.complete_cupon if activity.pending? %>
                  <tr>
                    <td><%= truncate_u activity.name, length: 16 %></td>
                    <td><%= activity.keyword %></td>
                    <% if @activity_type_id == 14 %>
                      <td><%= activity.deal_status_name %></td>
                    <% end %>
                    <td><%= activity.duration %></td>
                    <td>
                      <%= show_activity_status(activity) %>
                      <%= activity.activity_type.fight? ? (activity.status_setted? ? activity.activity_status_name : (activity.status_setting? ? "未设题" : activity.status_name)) : "" %>
                    </td>
                    <% if @activity_type_id == 15 %>
                      <td title="题目数量"><%= activity.survey_questions.count %></td>
                    <% end  %>
                    <td class="tleft">
                      <%if activity.activity_type.vote? %>
                        <a href="javascript:void(0);" onclick="popUrl(this)" data-name="name" data-w="900" data-h="0.8" data-title="查看投票" data-iframe="<%= activity_path(activity) %>">查看</a>
                        <a href="javascript:void(0);" onclick="popUrl(this)" data-name="name" data-w="900" data-h="0.8" data-title="投票设置" data-iframe="<%= vote_items_activity_path(activity) %>">投票设置</a>
                      <% end %>
                      <% if activity.vote? && activity.allow_show_report? %>
                        <a  onclick="popUrl(this)" data-name="name" data-w="900" data-h="0.8" data-title="统计图标：<%= activity.name %>" data-iframe="<%= votes_diagram_activities_path(id: activity.id) %>">统计</a>
                      <% end %>
                      <% if activity.allow_show? && !activity.activity_type.surveys? %>
                       <% if activity.slot? %>
                        <%= link_to '查看', slot_path(activity) if activity.status_stopped? or (activity.status_setted? and activity.activity_status != Activity::STATUS_NOT_START) %>
                       <%- else %>
                        <%= link_to '查看', activity if activity.status_stopped? or (activity.status_setted? and activity.activity_status != Activity::STATUS_NOT_START) and !activity.activity_type.vote? and !activity.activity_type.surveys? %>
                       <%- end %>
                       <% unless activity.activity_type.vote? || activity.activity_type.surveys? %>
                        <% if activity.slot? %>
                          <%= link_to '设置', edit_slot_path(activity) if activity.status_setting? or (activity.status_setted? and activity.activity_status == Activity::STATUS_NOT_START)  %>
                        <% else %>
                          <%= link_to '设置', edit_activity_path(activity) if activity.status_setting? or (activity.status_setted? and activity.activity_status == Activity::STATUS_NOT_START)  %>
                        <% end %>
                       <% end %>
                       <%= link_to '停止', [:stop, activity], method: :post, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }  if activity.allow_stop? %>
                       <%#= link_to '删除', [:delete, activity], method: :post, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }  if ((@activity_type_id != 14 and (activity.status_setting? or activity.status_stopped? or (activity.status_setted? and (activity.activity_status == Activity::STATUS_NOT_START or activity.activity_status == Activity::HAS_ENDED)))) or (@activity_type_id == 14 and (activity.status_stopped? or (activity.status_setted? and (activity.activity_status == Activity::STATUS_NOT_START or activity.activity_status == Activity::HAS_ENDED))))) %>
                       <% if ((@activity_type_id != 14 and @activity_type_id != 12 and (activity.status_setting? or activity.status_stopped? or (activity.status_setted? and (activity.activity_status == Activity::STATUS_NOT_START or activity.activity_status == Activity::HAS_ENDED)))) or (@activity_type_id == 14 and (activity.status_stopped? or (activity.status_setted? and (activity.activity_status == Activity::STATUS_NOT_START or activity.activity_status == Activity::HAS_ENDED))))) %>
                       <%= link_to '删除', activity, method: :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                       <% end %>
                       <%= link_to '删除', activity, method: :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }  if @activity_type_id == 14 and activity.status_setting? %>
                       <%= link_to '开启', active_activity_path(activity), method: :post if activity.allow_active? %>
                       <%= link_to 'SN码管理', consumes_activities_path( {activity_id: activity.id}) unless activity.status_setting? or (activity.status_setted? and (activity.activity_status == Activity::STATUS_NOT_START or activity.activity_status == Activity::WARM_UP) or activity.activity_type.vote? or activity.activity_type.surveys?) %>
                       <% if activity.vote? && !activity.status_setted? %>
                        <%= link_to '删除', activity, method: :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                       <% end %>
                      <% end -%>
                      <% if activity.activity_type.groups? %>
                        <%= link_to '成团', [:deal_success, activity], method: :post, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } if (activity.status_setted? and activity.deal_status != Activity::DEAL_SUCCESS and Time.now >= activity.start_at) %>
                      <% end %>

                      <% if activity.activity_type.fight? %>
                        <%= link_to '查看', activity  if activity.status_stopped? or (activity.status_setted? and activity.activity_status != Activity::STATUS_NOT_START) %>
                        <%= link_to '修改', edit_activity_path(activity) if activity.status_setting? or (activity.status_setted? and activity.activity_status == Activity::STATUS_NOT_START) %>
                        <%= link_to '停止', [:stop, activity], method: :post, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }  if activity.status_setted? and activity.activity_status == Activity::UNDER_WAY %>
                        <%= link_to '删除', [:delete, activity], method: :post, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }  if activity.status_setting? or activity.status_stopped? or (activity.status_setted? and (activity.activity_status == Activity::STATUS_NOT_START or activity.activity_status == Activity::HAS_ENDED)) %>
                        <%= link_to '题目设置', fight_papers_path( {activity_id: activity.id})  if activity.status_setting? or (activity.status_setted? and activity.activity_status == Activity::STATUS_NOT_START) %>
                        <%= link_to 'SN码管理', consumes_activities_path( {activity_id: activity.id}) unless activity.status_setting? or (activity.status_setted? and activity.activity_status == Activity::STATUS_NOT_START ) unless  activity.activity_type.vote?  %>
                      <% end -%>

                      <% if activity.surveys? %>
                        <%- if ['未配置'].include? show_activity_status(activity)  %>
                          <a  onclick="popUrl(this)" data-name="name" data-w="900" data-h="0.8" data-title="修改微调研" data-iframe="<%= edit_activity_path(activity) %>">修改</a>
                        <%- else %>
                          <a  onclick="popUrl(this)" data-name="name" data-w="900" data-h="0.8" data-title="查看微调研" data-iframe="<%= activity_path(activity) %>">查看</a>
                        <%- end %>
                        <% if activity.allow_set_question? %>
                         &nbsp; <a  onclick="popUrl(this)" data-name="name" data-w="900" data-h="0.8" title="点击管理题目" data-title="题目设置 - <%= activity.name %>" data-iframe="<%= survey_questions_path(activity_id: activity.id) %>">题目</a>
                        <% end %>
                        <% if (!activity.status_setting?) && activity.survey_questions.present? %>
                         &nbsp; <a  onclick="popUrl(this)" data-name="name" data-w="900" data-h="0.8" title="点击查看统计图表" data-title="统计图表" data-iframe="<%= diagram_survey_questions_path(id: activity.id) %>">统计</a>
                        <% end %>
                        <%= link_to '停止', [:stop, activity], method: :post, :data => { :confirm => t('.confirm', :default => "调研活动正在进行，确认停止吗？") }, style: "margin-left:5px;"  if ['进行中'].include? show_activity_status(activity)%>
                        <%= link_to '开启', [:active, activity], method: :post, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, style: "margin-left:5px;"  if activity.allow_active? %>

                        <%= link_to '删除', activity, method: :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } if activity.allow_delete? %>
                      <% end -%>
                    </td>
                  </tr>
                <% end.blank? %>
                <tr>
                  <td colspan="<%= ['groups'].include?(action_name) ? 7 : 6 %>" class="green text-center">没有活动</td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <%= paginate @activities %>
        </div>
      </div>
    </div>
    <!-- /.page-content -->
  </div>
<% end %>

<% content_for :custom_js do %>
<% end %>
