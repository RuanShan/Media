<dl class="active">
  <dt>活动结束设置<span class="fr">查看</span></dt>
  <dd>
    <div class="wrap-l">
      <div class="wrap-view">
        <b class="activity_notice_title_preview"><%=  @activity.stopped_activity_notice.title %></b>
        <span><%= Date.today %></span>
        <span class="img upload-preview-img-218-100">
          <%= image_tag @activity.stopped_activity_notice.pic, class: 'stop_notice_pic' %>
        </span>
        <span class="intro activity_notice_summary_preview">
          <%=  @activity.stopped_activity_notice.description %>
        </span>
      </div>
    </div>
    <div class="wrap-r">
      <%= form_for(@activity, validate: true, html: { id: 'stopped_notice_form' }) do |f| %>
        <%= f.fields_for :stopped_activity_notice, validate: true do |san| %>
          <div class="box-form form-row">
            <div class="p">
              <span>发放完毕微信消息标题<em>*</em><span class="fgray">（不能超过64个字）</span></span>
              <%= san.text_field :title, maxlength: 64, class: "activity_notice_title input-text" %>
            </div>
            
            <div class="p">
              <span>发放完毕微信消息图片<em>*</em></span>
              <div class="box-upload">
                <div class="margin">
                  <div class="box-file">
                    <%= san.file_field :pic, class: 'img_preview', rel: 'stop_notice_pic' %>
                    <a class="btn btn-big">上传图片</a>
                  </div>
                  <span class="p-file fgray">（图片建议尺寸：720像素*400像素） </span>
                </div>
              </div>
            </div>

            <div class="p">
              <span>发放完毕微信消息摘要<span class="fgray">（不能超过128个字）</span></span>
              <%= san.text_area :summary, maxlength: 128, rows: 5, class: "activity_notice_summary", style: 'height: auto;' %>
            </div>

            <%= render 'form_submit' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </dd>
</dl>
