<dl class="active">
  <dt>活动设置<span class="fr">查看</span></dt>
  <dd>
    <div class="wrap-l">
      <div class="wrap-view">
        <b class="preview_active_notice_title"><%=  @activity.active_activity_notice.title %></b>
        <span><%= Date.today %></span>
        <span class="img upload-preview-img-218-100"><%= image_tag @activity.active_activity_notice.pic_url, class: 'active_notice_pic' %></span>
        <span class="intro preview_active_notice_summary">
          <%= @activity.active_activity_notice.summary || @activity.active_activity_notice.description %>
        </span>
      </div>
    </div>
    <div class="wrap-r">
      <%= form_for(@activity, validate: true, html: { id: 'active_notice_form' }) do |f| %>
        <%= f.fields_for :active_activity_notice, validate: true do |ran| %>
          <div class="box-form form-row">
            <div class="p">
              <span>活动名称<em>*</em><span class="fgray">（不能超过64个字）</span></span>
              <%= f.text_field :name, class: "input-text", validate: true %>
            </div>

            <div class="p">
              <span>活动触发关键词<em>*</em><span class="fgray">（活动的关键词不能重复）</span></span>
              <%= f.text_field :keyword, class: "input-text", validate: true %>
            </div>

            <div class="p">
              <span>活动微信消息标题<em>*</em><span class="fgray">（不能超过64个字）</span></span>
              <%= ran.text_field :title, maxlength: 64, class: "activity_title input-text", rel: 'ready_activity_title', validate: true %>
            </div>

            <div class="p">
              <span>活动微信消息图片<em>*</em></span>
              <div class="box-upload">
                <div class="margin">
                  <div class="box-file">
                    <%= ran.file_field :pic, class: 'img_preview', rel: 'ready_pic' %>
                    <a class="btn btn-big">上传图片</a>
                  </div>
                  <span class="fgray">（图片建议尺寸：720像素*400像素）</span>
                </div>
              </div>
            </div>

            <div class="p">
              <span>活动微信消息摘要<span class="fgray">（不能超过128个字）</span></span>
              <%= ran.text_area :summary, maxlength: 128, rows: 5, class: "activity_summary", rel: 'ready_activity_notice_summary', style: "height: auto;" %>
            </div>

          </div>
          <div class="p">
            <span>活动说明<span class="fgray">（不能超过2000个字）</span></span>
            <%= ran.cktext_area :description, maxlength: 2000, rows: 5, class: "activity_notice_description", style: "height: auto;" %>
          </div>

          <div class="box-form form-row">
            <div class="p">
              <span>活动时间<em>*</em><span class="fgray">（请确保预热时间早于活动开始时间，若两者一样，则表示没有预热）</span></span>
              <span>活动预热时间<em>*</em> 从：</span>
              <%= f.text_field :ready_at, class: 'datetimepicker input-text', style: "width:40%;", readonly: true %>
              <i>到活动开始时间</i>
              <i class="ready-at-message red hide"></i>
              <span>活动开始时间<em>*</em> 从</span>
              <%= f.text_field :start_at, class: 'datetimepicker input-text', style: "width:40%;", readonly: true %>
              <i>到　</i>
              <%= f.text_field :end_at, class: 'datetimepicker input-text', style: "width:40%;", readonly: true %>
              <i class="start-at-message red hide"></i>
            </div>

            <% if @activity.activity_type.consume? %>
              <%= f.fields_for :activity_property do |activity_property| %>
                <div class="p">
                  <span>优惠券发放总数<em>*</em></span>
                  <%= activity_property.text_field :coupon_count, validate: true, class: 'remove-last-dot input-text' %>
                </div>
                <div class="p">
                  <span>优惠券每天允许发放总数</span>
                  <%= activity_property.text_field :consume_day_allow_count, class: 'remove-last-dot input-text' %>
                </div>
                <div class="p">
                  <span>每人允许领取数<em>*</em></span>
                  <%= activity_property.text_field :get_limit_count, validate: true, class: 'remove-last-dot input-text' %>
                </div>
                <div class="p">
                  <span>重复抽奖时回复<em>*</em><span class="fgray">（超过允许领取数时，回复此内容）</span></span>
                  <%= activity_property.text_field :repeat_draw_msg, validate: true, class: 'remove-last-dot input-text' %>
                </div>
              <% end %>
            <% end %>

            <%= render 'form_submit' %>
          </div>
          
        <% end %>
      <% end %>
    </div>
  </dd>
</dl>
