<% title '支付' %>

<% content_for :sidebar do %>
  <%= render 'sidebar_base_new' %>
<% end %>
<%= content_for :topbar do %>
  <h1 class="pagecurrent">支付</h1>
<% end %>

<div class="box-table fl">
  <%= form_for(@payment, validate: true) do |f| -%>
    <%= f.hidden_field :subject %>

    <div class="row clearfix">
      <label class="horizon-label">支付金额：</label>
      <div class="form-field">
        <div class="input-box input-152 sprits inline-block">
          <%= f.text_field :amount, class: 'txt-input' %>
        </div>
      </div>
    </div>
    <div class="row clearfix">
      <label class="horizon-label">备注：</label>
      <div class="form-field">
        <div class="input-box input-323 sprits inline-block">
          <%= f.text_area :subject, class: 'txt-input' %>
        </div>
      </div>
    </div>

    <div class="form-action">
      <a href="javascript:void(0);" class="button sprits button-89-bright inline-block" id="payments-save">支付宝支付</a>
      <img src='/assets/ajax-loader.gif' title='正在提交中，请稍候...' id="loading" class='hide'/>
    </div>
  <% end -%>
</div>

<script>
$('#payments-save').on('click', function() {
  $(this).closest('form').submit();
  return false;
});
</script>
