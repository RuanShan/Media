<% title @booking.name %>
<% content_for :booking_top_pic do %>
    <header>
      <a href="<%= mobile_booking_booking_item_url(@site, @booking, @booking_item, anchor: "mp.weixin.qq.com") %>" class="ico-prev">
        <img src="/assets/mobile/wserver/ico-back.png"/>
      </a>
      <h1>评论</h1>
      <a href="<%= new_mobile_booking_booking_comment_url(site_id: @site.id, booking_item_id: @booking_item.id) %>">
        <img src="/assets/mobile/wserver/ico-comment.png"/>
      </a>
    </header>
<% end %>

<div class="box-comment">
  <div class="ft-comment">
    <% @booking_comments.each do |booking_comment| %>
        <div class="ft-list">
          <div class="fl">
            <span class="bd-img">
                <%= image_tag "/assets/life/user_logo.png" %>
            </span>
          </div>
          <div class="fr">
            <p><%= booking_comment.content %></p>
            <span>
                <i class="fl"><%= booking_comment.user.try(:name) %> </i>
                <i class="fr"><%= booking_comment.created_at.to_date %></i>
            </span>
          </div>
        </div>
    <% end %>
    <% if @booking_comments.blank? %>
      <p class="tcenter ft-null">该商品还没有评论，赶紧评论吧！</p>
    <% end %>
  </div>
</div>