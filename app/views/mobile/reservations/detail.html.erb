<section id="sec-index">
    <div class="body">
        <div class="mod-des">
            <img src="<%= @activity.logo_url %>">
            <p><%= @activity.description %></p>
        </div>
        <div class="mod-form form-hor">
            <div class="bd">
                <%- @activity.custom_fields.normal.visible.order(:position).each do |field|%>
                    <%= render "field", field: field %>
                <%- end %>
            </div>
            <div class="ft">
                <%- if @order.created? && (@order.user_id.to_s == @user.id) %>
                    <%= link_to '撤销预定',  abandon_mobile_reservations_url(id: @order.id), class: "btn btn-blue abandon", data: {confirm: '确定撤销么？' } %>
                 <%- end %>
                <input type="button" value="返回" class="btn btn-gray" onclick="cancelSubmit();"/>
            </div>
        </div>
    </div>
</section>