  }
  .website-article a{
    display: block;
    font-size: 16px;
    color: #666;
    line-height: 45px;
    white-space: nowrap;
    border-right: 1px solid #ccc;
    text-align: center;
    height: 45px;
    padding:0px 10px;
  }
  .website-article .active{
    height:44px;
    line-height:43px;
    border-bottom:4px solid #00a0e9;
    color:#00a0e9;
  }
  /*二级导航*/
  .website-articles {
    width:100%;
    height:40px;
    overflow:hidden;
    border-bottom:1px solid #ccc;
    border-left:1px solid #ccc;
    position:relative;
    background:#fff;
  }
  .website-articles ul{
    display:table;
    position:absolute;
  }
  .website-articles li{
    display:table-cell;
  }
  .website-articles a{
    display: block;
    font-size: 16px;
    color: #666;
    line-height: 44px;
    white-space: nowrap;
    border-right: 1px solid #ccc;
    text-align: center;
    height: 40px;
