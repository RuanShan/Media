<% provide(:title, @item.name) %>
<%= content_for(:topbar) do %>
    <header>
      <a href="<%= mobile_group_comments_path(:id => @item.id) %>" class="ico-prev"><img src="/assets/mobile/wshop/ico-back.png"/></a>
      <h1>写评论</h1>
    </header><!-- header end -->
<% end %>
<section>
  <div class="box-comment">
    <div class="hd">
      <h2 class="ellipsis">发表评论</h2>
      <a class="ico ico-heart fr"><em><%= @comments.count %></em></a>
    </div>
    <div class="bd">
      <div class="fl">
        <span class="bd-img">
            <%= image_tag "/assets/life/user_logo.png" %>
        </span>
      </div>
      <div class="fr">
        <%= form_for @comment, :url=> mobile_group_comments_path, :method => :post, :validate => true do |form| %>
            <%= hidden_field_tag "id", @item.id  %>
            <%= form.hidden_field :user_id %>
            <%= form.hidden_field :group_order_id %>
            <div class="bd-comment">
              <%= form.text_area :content, :rows => 3,  :placeholder => "请输入您的评论" %>
              <%= form.hidden_field :user_id, :value => session[:user_id] %>
              <div class="bd-face">
                <!--<a class="ico icon-smile"></a>-->
                <span class="fr">140</span>
              </div>
            </div>
            <div class="bd-text">
              <%= form.text_field :name, :placeholder => "昵称（必填）" %>
            </div>
            <div class="bd-btn">
              <input type="submit" class="btn" value="发布"/>
            </div>
        <% end %>
      </div>
    </div>
    <div class="ft ft-comment">
      <h3>热门评论</h3>
      <% if @comments.present?  %>
          <% @comments.each do |comment| %>
              <div class="ft-list">
                <div class="fl">
                    <span class="bd-img">
                       <%= image_tag "/assets/life/user_logo.png" %>
                    </span>
                </div>

                <div class="fr">
                  <b><%= comment.name %></b>
                        <span>
                        	<i><%= date_format_full(comment.created_at) %></i>
                        </span>
                  <p><%= comment.content %></p>
                </div>
              </div>
          <% end %>
      <% else%>
          <div class="box-null">
            真遗憾，暂时没有评论
          </div>
      <% end %>
    </div>
  </div>
</section><!-- section end -->

<script>
    $(".btn").click(function(){
        if($("#group_comment_content").val() == ''){
            alert("评论不能为空！");
            $("#group_comment_content").focus();
            return false;
        }else if($("#group_comment_name").val() == ''){
            alert("昵称不能为空！");
            $("#group_comment_name").focus();
            return false;
        }else{
            $(".new_group_comment").submit();
        }
    })
    $(function(){
        var header=$("header");
        $("input,textarea,select").focus(function(){
            header.css({"position":"absolute"});
        });
        $("input,textarea,select").blur(function(){
            header.css({"position":"fixed"});
        });
    });
</script>