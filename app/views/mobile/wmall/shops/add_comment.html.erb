<section id="sec-index">
  <header class="box" id="ractive_shop_container">
  </header>
  <div class="body">
    <div class="comment-hd"><p>留下您对本店铺的评价：</p></div>
    <%= form_for(@comment, url: "#nogo", as: :comment, method: :post, remote: true, html: {class: "comment-bd"}) do |f|%>
      <ul>
        <li>
          <span>昵称</span>
          <div class="input-box">
            <%= f.text_field "nickname", class: "input"%>
          </div>
        </li>
        <li>
          <span>人均</span>
          <div class="input-box">
            <%= f.text_field "average_spend", class: "input"%>
          </div>
        </li>
        <li>
          <span>总评</span>
          <div class="input-box">
            <div class="score">
              <div class="start" style="width:100%;"></div>
            </div>
            <%= f.hidden_field "rank", value: "5"%>
          </div>
        </li>
        <li>
          <span>评价内容</span>
          <div class="input-box">
            <%= f.text_area "content", class: "input", cols: "30", rows: "5", placeholder: "很好"%>
          </div>
        </li>
      </ul>
      <%= f.submit "发表评论", class: "btn btn-blue J-submit"%>
    <% end %>
  </div>

</section><!--main section end -->
<div class="pop pop-success">
  <span>评论成功</span>
</div>
<div class="pop pop-error">
  <span>评论失败</span>
</div>

<script id='ractive_shop_template' type='text/ractive'>
  <div class="mod-nav">
    <%= link_to add_comment_mobile_wmall_shop_path(auth_params.merge(id: params[:id])), class: "tleft" do %>
      <img src="/mobile/img/wbusiness/icon-back.png">
    <% end %>
    <span>{{name}}</span>
  </div>
</script>

<script>
  $(function(){
    var path = "/api/wmall/shops/<%= params[:id] %>" + ".json";
    var shop = fetch_wmall_data({path: path}, {supplier_id: <%= session[:supplier_id] %>}, options = {})

    var ractive_shop = new Ractive({
      // The `el` option can be a node, an ID, or a CSS selector.
      el: '#ractive_shop_container',

      // We could pass in a string, but for the sake of convenience
      // we're passing the ID of the <script> tag above.
      template: '#ractive_shop_template',

      // Here, we're passing in some initial data
      data: shop
    });
  })
$(function(){
  // 提交评论
  $(".J-submit").on("click",function(){
    comment_data = $(".comment-bd").serializeArray()
    comment_data.push({name: 'supplier_id', value: '<%= session[:supplier_id] %>'});

    fetch_wmall_data(
      {
        path: "/api/wmall/shops/<%= params[:id] %>" + "/comment"
      },
      comment_data,
      options = {
        type: "post",
        success: function(data){
          if(data.code == 0){
            $(".pop-success").fadeIn();
            setTimeout(function(){
              $(".pop-success").fadeOut(function(){
                window.location.href='<%=raw comments_mobile_wmall_shop_path(auth_params.merge(id: params[:id]))%>';
              });
            },1000);
          }else{
            $(".pop-error").fadeIn();
            setTimeout(function(){
              $(".pop-error").fadeOut();
            },1000)
          }
        },
        error: function(data) {
          $(".pop-error").fadeIn();
          setTimeout(function(){
            $(".pop-error").fadeOut();
          },1000)
        }
      }
    )

    return false; // prevents normal behaviour
  });
  // 评分
  $(".score,.start").on({
    click:function(){
      var x=parseInt(event.offsetX),
        $this = $(".start");
      if(x>0&&x<24){
        $this.width("20px");
        $this.attr("data-score",1);
        $("#rank").val(1);
      }else if(x<48){
        $this.width("44px");
        $this.attr("data-score",2);
        $("#rank").val(2);
      }
      else if(x<72){
        $this.width("68px");
        $this.attr("data-score",3);
        $("#rank").val(3);
      }
      else if(x<96){
        $this.width("92px");
        $this.attr("data-score",4);
        $("#rank").val(4);
      }else{
        $this.width("118px");
        $this.attr("data-score",5);
        $("#rank").val(5);
      }
    }
  });
})
</script>
