<%= render "slider", {:has_slider_text => :yes} %>

<div class="index">
  <div class="navLine-img">
    <% website_menus[0..2].each do |menu| %>
        <li>
          <%= link_to menu_url(menu), class: 'box mod-index-img' do %>
              <%= menu.pic_or_icon :has_title => true, :pic_type => "thumb" %>
          <% end %>
        </li>
    <% end %>
  </div>

  <% website_menus[3..-1].to_a.each do |menu| %>
    <p class="index-title <%= menu.pic? || menu.font_icon.present? ? '': 'no-icon'%>">
      <%= link_to menu_url(menu), class: 'box' do %>
          <%= menu.title %>
      <% end %>
    </p>
    <% if menu.pic? || menu.font_icon.present? %>
          <div class="ul-text">
            <%= link_to menu_url(menu), class: 'box mod-index' do %>
                <%= menu.pic_or_icon :has_title => false, :pic_type => "custom" %>
            <% end %>
          </div>
    <% end %>
  <% end %>

</div>
