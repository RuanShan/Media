<%= render :partial => "slider", :locals => {:has_slider_text => :yes} %>

<div class="index">
  <% website_menus.in_groups_of(4, false).each do |menus| %>
     <% if menus.present? %>
        <ul class="navLine-ul">
            <% menus.each do |menu| %>
              <li>
                <%= link_to menu_url(menu), :class => 'box mod-index' do %>
                    <%= menu.pic_or_icon :has_title => true, :pic_type => "thumb" %>
                <% end %>
              </li>
            <% end %>
        </ul>
     <% end %>
  <% end %>
</div>
