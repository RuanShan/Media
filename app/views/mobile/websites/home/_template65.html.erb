<div class="index" id="indexList">
  <div class="index-wrap">
    <% if website_menus.present? %>
        <ul>
          <% website_menus.each do |menu| %>
              <li>
                <%= link_to menu_url(menu), class: "box mod-index" do %>
                    <%= menu.pic_or_icon :has_title => true, :pic_type => "custom" %>
                <% end %>
              </li>
          <% end %>
        </ul>
        <div class="line"></div>
    <% end %>
  </div>
</div>

<%= render "iscroll", {:selector => "#indexList"} %>

<% content_for :document_ready_js do %>
    var h=$(".html").height();
    $(".body").css({"min-height":h+"px"});
    <% if @website_setting.bg_image.present? %>
        // 静态背景图
        //$(".html").css("background-image", "url(<%= @website_setting.bg_image %>)");
    <% end %>
<% end %>