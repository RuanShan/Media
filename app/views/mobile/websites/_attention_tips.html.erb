<%unless cookies[:do_not_show_attention_tips]%>
  <div id="pop_window1" class="pop_window pop_tip1 on">
    <div>
      <span class="close" onclick="setCookie('do_not_show_attention_tips', true); document.querySelector('#pop_window1').classList.remove('on');">&nbsp;</span>
    </div>
    <style>
      .pop_window:not(.on){
        display: none;
      }
      .pop_window>div{
        position: fixed;
        top:0;
        left:0;
        width:100%;
        height:100%;
        z-index: 3000;
        background: url(/assets/mobile/attention_tips_1.png) no-repeat right 10px;
        -webkit-background-size:100% auto;
        background-color:rgba(0,0,0,0.5);
      }
      .pop_window>div>span.close{
        display: inline-block;
        width:35px;
        height:35px;
        border-radius:45px;
        position: absolute;
        left:20px;
        top: 20px;
        background:url(/assets/mobile/attention_tips_2.png) no-repeat center center;
        -webkit-background-size:100%;
      }
    </style>
    <script>
      function setCookie(name,value)
      {
        var Days = 300;
        var exp = new Date();
        exp.setTime(exp.getTime() + Days*24*60*60*1000);
        document.cookie = name + "="+ escape (value) + ";expires=" + exp.toGMTString();
      }
    </script>
  </div>
<% end %>