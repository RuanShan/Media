<div class="box box-list box-book">
  <div class="hd"></div>
  <div class="bd">
    <a class="bg-arrow table" href="<%= material_type_url main_material, website_menu %>">
      <% if main_material.pic? %>
                <span class="fl box-circle td">
                    <b style="background-image:url(<%= main_material.pic.try(:thumb) %>)"></b>
                </span>
      <% end %>
      <span class="<%= main_material.pic? ? "fr td" : "fw td" %>">
            <b><%= main_material.title %></b>
            <i><%= date_format_full_l(main_material.created_at)  %></i>
          </span>
    </a>
  </div>
</div>
<% child_material.each do |child| %>
    <div class="box box-list box-book">
      <div class="hd"></div>
      <div class="bd">
        <a class="bg-arrow table" href="<%= material_type_url child, website_menu %>">
          <% if child.pic? %>
                <span class="fl box-circle td">
                    <b style="background-image:url(<%= child.pic.try(:thumb)%>)"></b>
                </span>
          <% end %>
          <span class="<%= child.pic? ? "fr td" : "fw td" %>">
            <b><%= child.title %></b>
            <i><%= date_format_full_l(child.created_at)  %></i>
          </span>
        </a>
      </div>
      <div class="ft"></div>
    </div>
<% end %>

