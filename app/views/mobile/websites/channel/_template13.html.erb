<% if main_material %>
    <div class="list">
      <div class="bd">
        <%= link_to material_type_url(main_material, website_menu) do %>
            <p><%= image_tag main_material.pic_url if main_material.pic_url %></p>
            <h1><%= main_material.title %></h1>
        <% end %>
        <% main_material.children.each do |child| %>
            <%= link_to material_type_url(child, website_menu) do %>
                <p><%= image_tag child.pic_url if child.pic_url %></p>
                <h1><%= child.title %></h1>
            <% end %>
        <% end %>
      </div>
    </div>
<% else %>
    <div class="list">
      <div class="bd">
        <% website_menu.sub_menus.each do |child| %>
            <%= link_to menu_url child do %>
                <p>
                  <% if child.is_a?(Assistant) %>
                      <%= image_tag child.pic_url if child.pic_url %>
                  <% elsif child.pic_url %>
                      <%= image_tag child.pic_url %>
                  <% else %>
                      <i class="<%= child.font_icon %>"></i>
                  <% end %>
                </p>
                <h1><%= child.name %></h1>
            <% end %>
        <% end %>
      </div>
    </div>
<% end %>
