<% if website_menu.cover_pic? %>
    <div class="mod-slider slider-hor" id="index">
      <ul class="slider-list">
        <li><a><%= image_tag website_menu.cover_pic.custom %></a></li>
      </ul>
      <div class="slider-text">
        <span class="fl slider-span" id="slider-span"><%= website_menu.name %></span>
      </div>
    </div>
<% end %>


<div class="index">
  <% if main_material %>
    <%= link_to material_type_url(main_material, website_menu), class: 'box mod-index' do %>
        <% if main_material.pic? %>
            <%= image_tag main_material.pic.large %>
        <% end %>
    <% end %>

    <% child_material.in_groups_of(4, false).each do |childs| %>
        <% childs.each_with_index do |child, index| %>
              <%= link_to material_type_url(child, website_menu), class: 'box mod-index' do %>
                  <% if child.pic? %>
                      <% if index == 0 || index == 1 %>
                          <i><%= image_tag child.pic.large %></i>
                      <% else %>
                          <%= image_tag child.pic.large %>
                      <% end %>
                  <% end %>
                  <% if index == 0 || index == 1 %><small><%= child.title %></small><% end %>
              <% end %>
        <% end %>
    <% end %>
  <% elsif website_menu %>
      <% website_menu.sub_menus.in_groups_of(4, false).each do |childs| %>
        <% childs.each_with_index do |child, index| %>
              <%= link_to menu_url(child), class: 'box mod-index'  do %>
                  <% if child.pic? or child.font_icon.present? %>
                      <% if child.pic? %>
                          <% if index == 1 || index == 2%>
                              <i><%= image_tag child.pic.large %></i>
                          <% else %>
                              <%= image_tag child.pic.large %>
                          <% end %>
                      <% else %>
                          <i class="<%= child.font_icon %>"></i>
                      <% end %>
                  <% else %>
                      <i></i>
                  <% end %>
                  <% if index == 1 || index == 2%><small><%= child.title %></small><% end %>
              <% end %>
        <% end %>

      <% end %>
  <% end %>
</div>