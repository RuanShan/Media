<% if main_material %>
  <div class="list">
    <ul>
      <li>
        <a href="<%= material_type_url(main_material, website_menu) %>">
          <div class="hd">
            <b><%= main_material.title %></b>
            <span> <%= main_material.summary.present? ? main_material.summary : main_material.created_at %></span>
          </div>
          <% if main_material.pic_url %>
          <div class="bd">
            <%= image_tag main_material.pic_url %>
          </div>
          <% end %>
          <div class="ft">
            查看全文
          </div>
        </a>
      </li>

      <% child_material.each do |child| %>
        <li>
          <a href="<%= material_type_url(child, website_menu) %>">
            <div class="hd">
              <b><%= child.title %></b>
              <span><%= child.summary.present? ? child.summary : child.created_at %></span>
            </div>
            <% if child.pic_url %>
            <div class="bd">
              <%= image_tag child.pic_url %>
            </div>
            <% end %>
            <div class="ft">
              查看全文
            </div>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  <div class="list">
    <ul>
    <% website_menu.sub_menus.each do |child| %>
      <li>
        <a href="<%= menu_url child %>">
          <div class="hd">
            <b><%= child.name %></b>
            <%= "<span>#{child.summary}</span>".html_safe if child.summary %>
          </div>

          <% if child.pic_url || child.font_icon.present? %>
          <div class="bd">
            <% if child.is_a?(Assistant) %>
              <%= image_tag child.pic_url if child.pic_url %>
            <% elsif child.pic_url %>
              <%= image_tag child.pic_url %>
            <% else %>
              <i class="<%= child.font_icon %>"></i>
            <% end %>
          </div>
          <% end %>
          <div class="ft">
            查看全文
          </div>
        </a>
      </li>
    <% end %>
    </ul>
  </div>
<% end %>
