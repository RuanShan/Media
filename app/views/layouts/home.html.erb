<!doctype html>
<html class="<%= @html_class || action_name %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta name="keywords" content="<%= content_for?(:keywords) ? yield(:keywords) : "微枚迪" %>" />
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "微枚迪" %>" />
    <meta name="viewport" content="width=1200" />
    <title><%= content_for?(:title) ? yield(:title) : "首页" %></title>
    <%= yield :custom_css if content_for?(:custom_css) %>
    <%= stylesheet_link_tag "home", media: "all" %>
    <%= javascript_include_tag "home" %>
    <%= csrf_meta_tags %>
    <%#= render 'application/baidu_tongji' %>
    <script>
      var _hmt = _hmt || [];
      (function() {
        var hm = document.createElement("script");
        hm.src = "//hm.baidu.com/hm.js?064188f85cb19683c84f6a7b9c7b1dc0";
        var s = document.getElementsByTagName("script")[0]; 
        s.parentNode.insertBefore(hm, s);
      })();
    </script>
  </head>
  <body>
    <%= render 'header' %>
    <%= content_for?(:content) ? yield(:content) : yield %>
    <%= render 'footer' unless @no_footer %>
    <%= yield :custom_js if content_for?(:custom_js) %>
  </body>
</html>
