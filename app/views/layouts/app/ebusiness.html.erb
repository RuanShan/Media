<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta content="black" name="apple-mobile-web-app-status-bar-style">
  <meta name="format-detection" content="telephone=no">
  <meta content="telephone=no" name="format-detection">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title><%=  content_for?(:title) ? yield(:title) : "微电商" %></title>
  <link type="text/css" rel="stylesheet" href="/stylesheets/ebusiness/main.css"/>
  <link type="text/css" rel="stylesheet" href="/stylesheets/ebusiness/wshop.css"/>
  <script src="/javascripts/app/website/jquery.touchslider.min.js"></script>
  <script src="/javascripts/app/website/swipe.js"></script>
  <script type="text/javascript" src="/javascripts/jquery-1.8.2.min.js"></script>
  <script src="/javascripts/app/life/main.js"></script>
</head>
<%= yield %>

<%= render 'application/gb2big5' %>

<%= render "application/app_footer" %>

<a href="javascript:scroll(0,0)" class="btn-up ico-up"></a>
<div class="pop-nav pop">
  <div class="pop-bg"></div>
  <div class="pop-bd">
    <div class="hd"><span>取消</span></div>
    <div class="bd">
      <% @categories.each do  |category| %>
      <dl>
        <dt>
          <% if category.has_children? %>
            <%= category.name %><i class="ico ico-angle-right fr"></i>
          <% else %>
            <%= link_to category.name, app_ecategory_path(category) %><i class="ico ico-angle-right fr"></i>
          <% end %>
        </dt>
        <dd>
          <% category.children.each do |c| %>
            <%= link_to c.name, app_ecategory_path(c), :class => "ico-minus" %>
          <% end %>
        </dd>
      </dl>

      <% end  if @categories%>
    </div>
  </div>
</div>
<script>
    $(function(){
        $(".ico-share").on("click",function(){
            $(".pop-share").show();
        });
        $("a").on("click", function(){
            $(this).addClass("active");
        });
    });
    <% if flash[:notice] || flash[:alert] %>
    alert("<%= flash[:notice] || flash[:alert] %>");
    <% flash[:notice]= nil; flash[:alert] = nil %>
    <% end %>
</script>
</html>
