  <% if current_user.need_auth_tel? %>
    $('.auth_tel_modal').modal({backdrop:'static'});
  <% end %>

var reg_tel = /^[0-9_\-]{11}$/;
$(function () {
            var count = 60;
            $(".input-check").on("click", function () {
                var self = $(this);
                var checkClass = "input-check-forbid";
                var countStr = "重发验证码({munber})";
                var sendStr = "发送验证码";
                var timer;
                var counter = function () {
                    if (--count < 0) {
                        count = 60;
                        self.text(sendStr);
                        $(".input-check").attr("disabled", false);
                        if ($("#supplier_tel").val() != "" && $("#supplier_tel").val() != "手机号") {
                            self.removeClass(checkClass);
                        }
                        clearTimeout(timer);
                        return false;
                    }

                    self.text(countStr.replace(/{munber}/, count));
                    timer = setTimeout(function () {
                        counter();
                    }, 1000);
                };
                    //发送验证码
                    if ($('#supplier_tel').val() == "" || !reg_tel.test($('#supplier_tel').val())) {
                        alert('请输入正确的手机号码');
                        return false;
                    } else {
                        result = $.ajax({
                            url: "<%= send_sms_suppliers_path %>?mobile=" + $('#supplier_tel').val(),
                            type: 'get',
                            dataType: 'json',
                            success: function (data, textStatus, jqXhr) {

                                    counter();
                                    $(".input-check").attr("disabled", true);
                                    self.addClass(checkClass);
                            }
                        });
                }
            });

        });
