<%= javascript_include_tag 'jquery' %>

<script>
  $parent_doc = $(parent.document);
  $parent_doc.find('#row-<%= @business_privilege.id %>').replaceWith('<%= j render "row", business_privilege: @business_privilege %>');
  $parent_doc.find('.pop').fadeOut(function() {
    $(this).remove();
  });
  parent.showTip('success', '保存成功');
  parent.document.location.reload();
</script>
