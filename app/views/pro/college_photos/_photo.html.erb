<li class="photo-li">
  <a href="javascript:;" title="<%= photo.name %>" data-rel="colorbox">
    <%= image_tag(photo.pic_url) %>
    <div class="text">
      <div class="inner"><%= photo.name %></div>
    </div>
  </a>
  <div class="tools">
    <a href="<%= college_photo_path(@college, photo) %>" id="delete<%= photo.id %>" data-confirm='确定删除该图片？' data-method='delete' data-remote='true'><i class="icon-trash btn-fa btn-remove"></i></a>
    <%= modal_to('<i class="icon-pencil btn-fa" data-toggle="modal" data-target="#editPhotoModal"></i>'.html_safe, edit_college_photo_path(@college, photo), title: "编辑图片", width: 800, height: 200, data: { target: "weisiteModal"}) %>
  </div>
</li>