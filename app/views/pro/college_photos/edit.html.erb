<%= form_for @photo, url: college_photo_path(@college, @photo), validate: true, :html => { :method => :put } do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <label class="control-label">标题</label>
      <div class="clearfix">
        <%= f.text_field :name, class: 'col-xs-6', data: {rule: 'length', maxlength: '10'}, placeholder: '' %>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="modal-footer">          
    <input type="submit" class="btn btn-sm btn-primary" data-fn="submit" value="确定" />
    <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
  </div>
<% end %>

