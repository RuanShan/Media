<tr id="article-row-<%= website_article.id %>">
  <td class="tleft"><%= website_article.title %></td>
  <td><%= website_article.website_menu.try(:com_str, [website_article.website_menu.try(:name)])  %></td>
  <td>
    <a href="<%= website_article_toggle_recommend_path(website_article) %>" class="btn-pluin btn-pluin-show pluin-<%= website_article.is_recommend ? 'open' : 'close' %>" data-remote="true" data-method="post"></a>
  </td>
  <td class="tleft"><%= website_article.created_at.to_s[0..15] %></td>
  <td class="txt-left-align">
  	<% edit_path = website_article.website.micro_life? ? edit_pro_website_article_path(website_article) : edit_busine_article_path(website_article) %>
  	<% show_path = website_article.website.micro_life? ? pro_website_article_path(website_article) : busine_article_path(website_article) %>
    <a class="fgreen" onclick="popUrl(this)" data-name="new_pro_website_article" data-w="900" data-h="600" data-title="编辑文章" data-url="<%= edit_path %>">编辑</a>
    <%= link_to '删除', show_path, method: :delete, confirm: "确认删除?" , remote: true, class: "fgreen" %>
  </td>
</tr>