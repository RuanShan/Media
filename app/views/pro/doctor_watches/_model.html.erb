<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for doctor_watch, remote: true, :html => {:class => "form-horizontal"} do |f| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">编辑排班设置</h4>
    </div>
    <div class="modal-body">
      <div class="form-group">
 	<label for="" class="col-sm-3 control-label">所属科室：</label>
 	<div class="col-sm-9">
 	  <input type="text" readonly value="<%= doctor_watch.doctor_arrange.hospital_department.try(:name) %>">
 	</div>
      </div>
      <div class="form-group">
 	<label for="" class="col-sm-3 control-label">医生姓名：</label>
 	<div class="col-sm-9">
 	  <input type="text" readonly value="<%= doctor_watch.doctor_arrange.hospital_doctor.try(:name) %>">
 	</div>
      </div>
      <div class="form-group">
 	<label for="" class="col-sm-3 control-label">预约时间：</label>
 	<div class="col-sm-9 input-group">
 	  <%= f.text_field :start_time, class: "date-time input-sm form-control", readonly: true %>
 	  <span class="input-group-addon">
 	    -
 	  </span>
 	  <%= f.text_field :end_time, class: "date-time input-sm form-control", readonly: true %>
 	</div>
      </div>
      <div class="form-group">
 	<label for="" class="col-sm-3 control-label">出诊医院：</label>

 	<div class="col-sm-9">
 	  <%= f.collection_select :shop_branch_id, current_user.shop_branches.used , :id, :name, {include_blank: "请选择医院"} ,  {:class => 'form-control'} %>
 	</div>
      </div>
      <div class="form-group">
 	<label for="" class="col-sm-3 control-label">预约数量：</label>

 	<div class="col-sm-9">
 	  <%= f.text_field :limit, class: "input-sm form-control" %>
 	</div>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit "保存", class: "btn btn-primary btn-sm" %>
      <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">取消</button>
    </div>
    <% end %>
  </div>

</div>
