<div class="main-content">
  <div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
      <%= render 'partials/home' %>
      <li><%= link_to '微汽车', car_shops_path %></li>
      <li><%= link_to '车系管理', car_catenas_path %></li>
    </ul>
    <%= render '/layouts/qrcode' %>
  </div>
  <div class="page-content">
    <div class="row">
      <div class="col-sm-12">
        <%= form_for @search, url: car_catenas_path, html: { method: :get } do |f| %>
        <div class="col-md-3 row">
          <div class="input-group input-group-sm input-group-text">
            <%= f.text_field :name_like, class: 'form-control', placeholder:"请输入车系名称查询" %>
            <span class="input-group-addon">
              <button class="btn btn-sm btn-filter btn-primary">查询</button>
            </span>
          </div>
        </div>
        <div class="col-md-3 row pull-right">
          <a href="javascript:;" data-title="新增车系" data-height="600" class="btn btn-primary btn-sm pull-right" data-toggle="modals" data-iframe="<%= new_car_catena_path %>">新增</a>
        </div>
        <%- end %>
      </div>
      <div class="col-xs-12 margin-top-20">
        <table id="" class="table table-striped table-bordered table-hover dataTable" data-url="<%=catenas_data_car_catenas_path %>">
          <thead>
            <tr>
              <th>车系名称</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @car_catenas.each do |catena| %>
            <tr>
              <td><%= catena.name.to_s[0..15] %></td>
              <td>
                <a href="javascript:;" class="fgreen" data-toggle="modals" data-title="编辑车系" data-height="400" data-iframe="<%= edit_car_catena_path(catena) %>">编辑</a>
                <%= link_to '删除', catena, confirm: '确认要删除？', method: :delete %>
              </td>
            </tr>
            <% end %>
            <% if @car_catenas.blank? %>
            <tr>
              <td colspan="5" class="green text-center">暂无记录</td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @car_catenas %>
      </div>
    </div>
  </div>
</div>
</div>
