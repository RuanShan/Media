<%= form_for @shop_table_order do |f| %>
  <div class="modal-body">
    <p>预定门店： <%= @shop_table_order.shop_branch.try(:name) %></p>

    <p>
      订单号： <%= @shop_table_order.order_no %>
      <% if @shop_table_order.ref_order %>
      订餐编号: <%= @shop_table_order.ref_order.order_no %>
      <% end %>
    </p>

    <p>用户姓名：  <%= @shop_table_order.username %></p>

    <p>手机号： <%= @shop_table_order.mobile %></p>

    <p>订单状态： <%= @shop_table_order.status_name %></p>

    <p>
      订单状态： 
      <label>
       <%= f.radio_button :status, ShopTableOrder::PENDING, class: 'ace' %>
       <span class="lbl">待处理</span>
     </label>
     <label>
       <%= f.radio_button :status, ShopTableOrder::COMPLETED, class: 'ace' %>
       <span class="lbl">完成</span>
     </label>
     <label>
       <%= f.radio_button :status, ShopTableOrder::CANCELED, class: 'ace' %>
       <span class="lbl">流单</span>
     </label>
     </p>

     <p>预定时间： <%= @shop_table_order.booking_at %></p>

     <p>下单时间： <%= @shop_table_order.created_at %></p>

     <p>预定人数： <%= @shop_table_order.booking_count %></p>

     <p>预定座位： <%= @shop_table_order.table_type_name %></p>

     <p>备　　注：</p>
     <span>
      <%= f.text_area :description, rows: 5, cols: 50 %>
     </span>
   </div>
   <div class="modal-footer">
      <!-- <a href="javascript:;" class="btn btn-primary btn-sm">确定</a> -->
      <button type="submit" class="btn btn-primary btn-sm">确定</button>
      <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">返回</button>
    </div>
<% end %>