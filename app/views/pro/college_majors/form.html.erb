<% content_for :main_content do %>
    <div class="main-content ">
        <div class="breadcrumbs" id="breadcrumbs">
          <ul class="breadcrumb">
              <%= render 'partials/home' %>
              <li><%= link_to '微教育', colleges_path %></li>
              <li><%= link_to '专业介绍', college_majors_path(@college) %></li>
          </ul>
          <%= render '/layouts/qrcode' %>
      </div>

      <div class="page-content">
          <div class="row">
            <%= form_for(@major, validate: true) do |f| %>
              <div class="col-sm-12">
                  <div class="form-group">
                      <label class="control-label">专业名称<span class="required-star">*</span></label>
                      <div class="clearfix">
                          <%= f.text_field :name, class: 'col-md-8', placeholder: '请输入专业名称' %>
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="control-label">专业描述<span class="required-star">*</span></label>
                      <div class="clearfix">
                          <%= f.text_area :description, class: 'col-md-8', rows: 5 %>
                      </div>
                  </div>
                  <div class="form-group">
                    <input type="submit" class="btn btn-sm btn-primary form-submit" value="保存">
                    <%= link_to '返回', college_majors_path(@college), class: 'btn btn-sm btn-default' %>
                  </div>
              </div>
            <% end %>
          </div>
      </div>
  </div>
<% end %>
