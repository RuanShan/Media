<%= form_for @repair_complain, url: wx_plot_repair_complain_path(@repair_complain, type: params[:type]), validate: true do |f| %>

  <div class="modal-body">
    <div class="row col-xs-12 text-center">
      <% WxPlotRepairComplain.status_options.each_with_index do |m, i| %>
          <% next if m[1] == 3 %>
          <label class="<%= 'margin-left-10' unless i == 0 %>">
            <%= f.radio_button :status, m[1], class: 'ace' %>
            <span class="lbl"><%= m[0] %></span>
          </label>
      <% end %>
    </div>
  </div>

  <div class="clearfix"></div>
  <div class="clearfix"></div>

  <div class="modal-footer">
    <%= f.submit '确定', class: 'btn btn-sm btn-primary' %>
    <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
  </div>

<% end %>
<% content_for :custom_js do %>
<% end %>