<% content_for :main_content do %>
    <div class="main-content ">
        <div class="breadcrumbs" id="breadcrumbs">
          <ul class="breadcrumb">
            <%= render 'partials/home' %>
            <li>
              <%= link_to '数据魔方', subscribe_data_wx_requests_path %>
            </li>
            <li><%= link_to '用户数据', subscribe_data_wx_requests_path %></li>
            <li><%= link_to '关注数', subscribe_data_wx_requests_path %></li>
          </ul>
          <%= render '/layouts/qrcode' %>
        </div>
      <div class="page-content">
        <div class="row">
          <div class="col-sm-12">
            <div class="data-widget">
              <div class="l-info">
                <div class="number"><%= @data['all']['累积关注'] %></div>
                <div class="font-size16">累积增加</div>
              </div>
              <div class="clearfix"></div>
            </div>
