            <div class="">
              <div id="chart-1"></div>
            </div>
          </div>
          <div class="col-sm-12 margin-top-20">
            <%= link_to '下载EXCEL', subscribe_data_wx_requests_path(format: :xls, start_at_and_end_at: params[:start_at_and_end_at], field: params[:field], type: params[:type]) , class: 'icon- pull-right datacube-download-link' %>
            <table id="" class="table table-striped table-bordered table-hover dataTable ">
              <thead>
              <tr>
                <th>
                  时间
                </th>
                <th>
                  新关注人数
                </th>
                <th>
                  取消关注人数
                </th>
                <th>
                  净增关注人数
                </th>
                <th>
                  累积关注人数
                </th>
              </tr>
              </thead>
              <tbody>
                <% @date_arrays.each do |date| %>
                    <tr>
                      <td><%= date %></td>
                      <td><%= @high_chart["关注数"][date.to_s] %></td>
                      <td><%= @high_chart["取消关注数"][date.to_s] %></td>
                      <td><%= @high_chart["净增长数"][date.to_s] %></td>
                      <td><%= @high_chart["累积关注"][date.to_s] %></td>
                    </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @date_arrays %>
          </div>
        </div>
      </div>
    </div>
<% end %>
<% content_for :custom_js do %>
    <script type="text/javascript">
        $(function(){
            $('.daterangepicker').hide();

            $('.daterange').on('apply.daterangepicker', function(ev, picker) {
                $('form').submit();
            });

            $('#chart-1').append("<%= escape_javascript(high_chart('chart_basic_line1', @chart)) -%>");
        });

    </script>
<% end %>
