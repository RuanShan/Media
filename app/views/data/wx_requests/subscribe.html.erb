                  <span class="input-group-addon">
                    <i class="icon-calendar bigger-110"></i>
                  </span>
                  <%= text_field_tag :start_at_and_end_at, params[:start_at_and_end_at],  class: 'daterange' %>
                </div>
              </div>
          <% end %>
