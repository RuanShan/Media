              <!--</div>-->
              <!--<div class="r-info">-->
                <!--<span>今日关注：<%#= @data['today']['关注数'] %></span><br>-->
                <!--<span>今日取消：<%#= @data['today']['取消关注数'] %></span>-->
              <!--</div>-->
              <!--<div class="clearfix"></div>-->
            <!--</div>-->
            <!--<div class="data-widget">-->
              <!--<div class="l-info">-->
                <!--<div class="number"><%#= @data['yesterday']['净增长数'] %></div>-->
                <!--<div class="font-size16">昨日新增</div>-->
              <!--</div>-->
              <!--<div class="r-info">-->
                <!--<span>昨日关注：<%#= @data['yesterday']['关注数'] %></span><br>-->
                <!--<span>昨日取消：<%#= @data['yesterday']['取消关注数'] %></span>-->
              <!--</div>-->
              <!--<div class="clearfix"></div>-->
            <!--</div>-->
            <div class="data-widget">
              <div class="l-info">
                <div class="number"><%= @data['seven']['净增长数'] %></div>
                <div class="font-size16">周新增</div>
              </div>
              <div class="r-info">
                <span>周关注：<%= @data['seven']['关注数'] %></span><br>
                <span>周取消：<%= @data['seven']['取消关注数'] %></span>
              </div>
              <div class="clearfix"></div>
            </div>
            <div class="data-widget">
              <div class="l-info">
                <div class="number"><%= @data['month']['净增长数'] %></div>
                <div class="font-size16">月新增</div>
              </div>
              <div class="r-info">
                <span>月关注：<%= @data['month']['关注数'] %></span><br>
                <span>月取消：<%= @data['month']['取消关注数'] %></span>
              </div>
              <div class="clearfix"></div>
            </div>


          </div>
          <%= form_tag subscribe_data_wx_requests_path, method: :get, id: 'subscribes' do %>
              <div class="col-sm-12 margin-top-20 data-filter">
                <div class="pull-left">
                  <%{"最近七天" => "seven", "最近一月" => "month"}.each do |key, value|%>
                      <a href="<%= subscribe_data_wx_requests_path(type: value) %>" class="btn btn-primary btn-filter btn-filter-tab <%= "active" if params[:type] == value %>" data-range="<%= value %>"><%= key %></a>
