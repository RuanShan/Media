<% provide(:title, "支付失败") %>
<!doctype html>
<html xmlns="http://www.w3.org/1999/html">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta content="black" name="apple-mobile-web-app-status-bar-style">
  <meta name="format-detection" content="telephone=no">
  <meta content="telephone=no" name="format-detection">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <style>
      * {margin:0;padding:0; outline: 0;-webkit-tap-highlight-color:rgba(0,0,0,0);}
      *,
      *:before,
      *:after {
          -webkit-box-sizing: border-box;
          -moz-box-sizing: border-box;
          box-sizing: border-box;
      }
      html, body {
          height: 100%
      }
      body {
          position: relative;
          overflow-x: hidden;
          font-size: 14px;
          font-family: arial, "\5FAE\8F6F\96C5\9ED1";
          -webkit-text-size-adjust: none;
          font-size:12px;line-height:1.5;background:#f9f9f9;
      }
      .html{ position: relative; max-width: 640px; margin: auto; overflow: hidden; min-height: 100%; padding: 0 0 40px 0;}
      .stage{position: relative; min-height: 100%; -webkit-transition: -webkit-transform .8s;}
      section{width: 100%; min-height: 100%;}
      footer{ height: 35px; line-height: 35px; position: relative; margin-top:-35px; text-align: center; z-index: 0;}
      footer,
      footer a{ color: #888;}
      .btn{border: 0;border-radius: 5px;display: block;width: 60%;color: #fff;height: 36px;line-height: 36px;text-align: center;margin: auto;font-size: 16px;box-shadow: none;background: #ccc;text-decoration: none;}
      .btn-bigest{width:100%;}
      .btn.btn-gray{background: #ccc;border: 1px solid #ccc;}
      .btn-orange{width:90%;height:40px;font:normal 18px/40px microsoft yahei;background:#ff3b30;}
      .state{padding:20px 0;text-align:center;color:#666;font-size:16px;}
      /*.state{padding:20px 0;text-align:center;color:#666;font-size:16px;background:#fff;border-bottom:1px solid  #ccc;}*/
      .state .fa{display:block;width:72px;height:72px;margin:0 auto 20px;font-size:50px;line-height:72px;text-align:center;color:#fff;-webkit-border-radius:50%;-moz-border-radius:50%;border-radius:50%;background:#ccc}
      .f-blue{color:#34aadc;}
      .f-big{font-size:24px;line-height:1.5;}
          /*reset*/
      .mod-box{ margin:30px 0;padding:10px 30px;border-top:1px solid  #ccc;border-bottom:1px solid  #ccc;background:#fff;}
      .mod-box dt b{font:normal 18px/26px Microsoft Yahei;color:#000;}
  </style>
  <link rel="stylesheet" type="text/css" href="/stylesheets/font-awesome.css">
</head>
<body>
<div class="html" id="html">
  <div class="stage" id="stage">
    <section id="sec-index">
      <div class="body">
        <div class="state">
          <i class="fa fa-exclamation icon-6"></i>
          <div class="f-big f-blue">支付失败</div>
          <p style="color: #e4564f;text-align: center;font-size: 16px;"><%= flash[:notice] %></p>
        </div>

        <!--<div class="ft">-->
          <!--<a class="btn btn-bigest btn-orange" href="javascript:void(0);" id="getBrandWCPayRequest">确认并支付</a>-->
        <!--</div>-->
      </div>
    </section>
  </div>
</div>
</body>
</html>

