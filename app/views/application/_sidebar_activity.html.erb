<ul class="box-nav box important">
  <li class="<%= (request.original_url =~ /activities$|activities\?page/i && action_name !='create') ? "current pagecurrent" : '' %>">
    <%= link_to activities_path do %><span>我的营销活动</span><% end %>
  </li>
  
  <li class="<%= (request.original_url =~ /old_coupons/i || @activity.try(:activity_type_id)==3 || @activity_type_id=='3') ? "current pagecurrent" : '' %>">
    <%= link_to old_coupons_activities_path do %><span>电子优惠券</span><% end %>
  </li>
  <li class="<%= (request.original_url =~ /guas/i || @activity.try(:activity_type_id)==4 || @activity_type_id=='4') ? "current pagecurrent" : '' %>">
    <%= link_to guas_activities_path do %><span>刮刮卡抽奖</span><% end %>
  </li>
  <li class="<%= (request.original_url =~ /wheels/i || @activity.try(:activity_type_id)==5 || @activity_type_id=='5') ? "current pagecurrent" : '' %>">
    <%= link_to wheels_activities_path do %><span>幸运大转盘</span><% end %>
  </li>
  <li class="<%= (request.original_url =~ /fight/i || @activity.try(:activity_type_id)==8 || @activity_type_id=='8') ? "current pagecurrent active" : '' %>">
    <%= link_to fights_activities_path do %><span>一战到底</span><% end %>
  </li>
  <li class="<%= (request.original_url =~ /hit_eggs/i || @activity.try(:activity_type_id)==25 || @activity_type_id=='25') ? "current pagecurrent" : '' %>">
    <%= link_to hit_eggs_activities_path do %><span>砸金蛋</span><% end %>
  </li>
  <li class="<%= (request.original_url =~ /slot/i || @activity.try(:activity_type_id)==28|| @activity_type_id=='28') ? "current pagecurrent" : '' %>">
    <%= link_to slots_activities_path do %><span>老虎机</span><% end %>
  </li>
  <li class="<%= controller_name =~ /share_photo/i && action_name != "help" ? "pagecurrent current" : '' %>">
    <%= link_to share_photo_settings_path do %><span>图片分享</span><% end %>
  </li>
</ul>

<div class="help"><%= link_to "", help_share_photo_settings_url %></div>

<script>
$(function(){
  $(".box-nav").on("click","a",function(){
    var $this = $(this);

    if ( $this.hasClass('product_item') ) {
      alert('您的套餐类型无法使用该功能，请联系经销商升级高版本套餐')
      return false;
    }
  });
});
</script>
