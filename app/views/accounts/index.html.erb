<% content_for :main_content do %>
  <div class="main-content">
    <div class="breadcrumbs" id="breadcrumbs">
      <ul class="breadcrumb">
        <%= render 'partials/home' %>
        <li><%= link_to '系统设置', profile_path %></li>
        <li><%= link_to '我的账号', 'javascript:;' %></li>
      </ul>
      <%= render '/layouts/qrcode' %>
    </div>

    <div class="page-content">
      <div class="page-header">
        <h1>
          我的账号
          <small>
            <i class="icon-double-angle-right"></i>
            修改基本信息
          </small>
        </h1>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <%= form_for current_user, validate: true, html: { class: 'form-horizontal', role: 'form' } do |f| -%>
            <div class="form-group">
              <label class="col-sm-3 control-label no-padding-right"><span class="required-star">*</span> 登录账号</label>
              <div class="col-sm-9">
                <%= f.text_field :nickname, class: 'col-xs-10 col-sm-4' %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label no-padding-right"><span class="required-star">*</span> 手机号码</label>
              <div class="col-sm-9">
                <%= f.text_field :mobile, class: 'col-xs-10 col-sm-4' %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label no-padding-right"><span class="required-star">*</span> 电子邮箱</label>
              <div class="col-sm-9">
                <%= f.text_field :email, class: 'col-xs-10 col-sm-4' %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label no-padding-right">联系人</label>
              <div class="col-sm-9">
                <%= f.text_field :contact, class: 'col-xs-10 col-sm-4' %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label no-padding-right">工作电话</label>
              <div class="col-sm-9">
                <%= f.text_field :tel, class: 'col-xs-10 col-sm-4' %>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label no-padding-right">QQ号码</label>
              <div class="col-sm-9">
                <%= f.text_field :qq, class: 'col-xs-10 col-sm-4' %>
              </div>
            </div>

            <div class="clearfix form-actions">
              <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-info" type="submit">
                  <i class="icon-ok bigger-110"></i>
                  保存
                </button>
                &nbsp; &nbsp; &nbsp;
                <button class="btn" type="reset">
                  <i class="icon-undo bigger-110"></i>
                  重置
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
<% end %>
