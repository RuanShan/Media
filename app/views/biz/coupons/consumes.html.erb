<% content_for :main_content do %>
<div class="main-content ">
  <div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
      <%= render 'partials/home' %>
      <%= render 'bread' %>
    </ul>
    <%= render '/layouts/qrcode' %>
  </div>
  <div class="page-content">
    <div class="tabbable">
      <%= render "tabs" %>
      <div class="tab-content no-border padding-24">
        <div id="tab-4" class="tab-pane fade active in">
          <div class="row">
            <%= form_for @search, url: consumes_coupons_path, html: { method: :get } do |f| %>
              <div class="col-sm-12">
                <div class="col-md-3 row">
                  <div class="input-group input-group-text">
                    <span class="input-group-addon">优惠券名称：</span>
                    <%= f.select :consumable_id_eq, @activity.coupons.normal.pluck(:name, :id).unshift(['全部', '']), class: "col-xs-12" %>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="input-group input-group-text">
                    <span class="input-group-addon">选择门店：</span>
                    <%= f.select :applicable_id_eq, current_user.shop_branches.used.pluck(:name, :id).unshift(['全部', '']), class: "col-xs-12" %>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="input-group input-group-text">
                    <span class="input-group-addon">SN码：</span>
                    <div class="input-group">
                      <%= f.text_field :code_like, class: 'form-control' %>
                    </div>
                  </div>
                </div>
                <div class="col-md-4 row">
                  <input class="btn btn-primary btn-sm btn-filter" type="submit" value="查询">

                  <%- consumes_count = @consumes_all.count rescue 0 %>
                  <% if consumes_count <= EXPORTING_COUNT %>
                      <%= link_to '导出EXCEL', consumes_coupons_path(format: :xls, search: params[:search], page_exl: 1), class: 'btn btn-sm btn-primary' %>
                  <% else %>
                      <%= link_to '导出EXCEL', consumes_coupons_path(format: :xls, search: params[:search]), class: 'btn btn-sm btn-primary hide', id: "a_exl" %>
                      <a class="btn btn-primary btn-sm btn-filter" data-title="资料导出" data-toggle="modals" data-target="delModal" data-text='<%= data_text(consumes_count,(consumes_count/EXPORTING_COUNT.to_f).ceil) %>'>导出EXCEL</a>
                  <% end %>

                  <a  data-title="核销优惠券" data-height="600" data-iframe="<%= use_consume_coupons_path %>" data-toggle="modals" class="btn btn-primary btn-sm">核销优惠券</a>
                </div>
              </div>
            <%- end %>
            <div class="col-md-12 margin-top-20">
              <table id="couponGateTable" class="table table-striped table-bordered table-hover dataTable ">
                <thead>
                  <tr>
                    <th>优惠券名称</th>
                    <th>优惠内容</th>
                    <th>SN码</th>
                    <th>中奖者手机</th>
                    <th>领取时间</th>
                    <th>使用时间</th>
                    <th>使用门店</th>
                  </tr>
                </thead>
                <tbody>
                  <%- if @consumes.each do |consume| %>
                    <tr>
                      <td><%= consume.consume_coupon_name %></td>
                      <td><%= coupon_info(consume.consume_value_by, consume.consume_value) %></td>
                      <td><%= consume.code %></td>
                      <td><%= consume.mobile %></td>
                      <td><%= consume.consume_created_at.to_s %></td>
                      <td><%= consume.used_at.try(:to_s) %></td>
                      <td><%= consume.shop_name || '商户总部' %></td>
                    </tr>
                  <% end.blank? %>
                    <tr><td colspan="7" class="green text-center">没有记录</td></tr>
                  <% end %>
                </tbody>
              </table>
              <%= paginate @consumes %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<% content_for :custom_js do %>
  <script>
    $('body').on('click','button[data-fn="submit"]',function(){
      var page_exl = $('#delModal').find("[name=page_exl]:checked");
      var url = "<%= consumes_coupons_path(format: :xls, search: params[:search]) %>"+"<%= params[:search].present? ? '&page_exl=' : '?page_exl=' %>"+page_exl.val();
      window.location.href=url;
    });

    $(".btn-filter").on("click", function(){
      setTimeout(function(){
      $("button[data-fn=submit]").attr("type","button");
      },200)
    });

  </script>
<% end %>
