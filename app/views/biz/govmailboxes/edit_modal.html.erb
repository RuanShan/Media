<%= form_for @box do |f|%>
<div class="modal-body">
	<div class="form-group">
		<label>信访总数显示</label>
		<div class="clearfix">
			<%= f.text_field :incomes_basecount, class: "col-xs-9"  %>
		</div>
	</div>
	<div class="form-group">
		<label>回复总数显示</label>
		<div class="clearfix">
			<%= f.text_field :replies_basecount, class: "col-xs-9"  %>
		</div>
	</div>
</div>
<div class="clearfix"></div>
<div class="modal-footer">
  <input type="submit" class="btn btn-sm btn-primary" value="确定"></input>
  <button type="button" class="btn btn-sm btn-default" data-dismiss="modals">取消</button>
</div>
<%- end %>
