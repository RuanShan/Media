<%= content_for :tab do%>
   <div id="tab-3" class="tab-pane active in">
      <div class="row">
	      <div class="col-md-12">
	      		<div class="pull-right ">
		            <a class="btn btn-primary btn-sm" data-toggle="modals" data-target="addVCField" data-title="新增信箱" data-height="1000" data-iframe="<%= new_govmailbox_path %>">新增信箱</a>
		        </div>
	      </div>
	      	<div class="col-md-12 margin-top-20">
	      		<table class="table table-striped table-bordered table-hover dataTable ">
				<thead>
		                <tr>
		                    <th>信箱名称</th>
		                    <th>来信数</th>
		                    <th>未回复</th>
		                    <th>操作</th>
		                </tr>
		                </thead>
		                <tbody>
		                <%- if @boxes.each do |box| %>
			              <tr>
			                    <td><%= box.name %></td>
			                    <td><%= box.govmails.roots.count %></td>
			                    <td><%= box.govmails.normal.roots.count %></td>
			                    <td>
			                        <a href="javascript:;" data-toggle="modals" data-target="addMailbox" data-title="编辑信箱" data-height="1000" data-iframe="<%= edit_govmailbox_path(box)%>">编辑</a>
			                        <%= link_to "信件管理", mails_govmailbox_path(box, search: {status_eq: 1 }) %>
			                        <%= link_to "删除",  remove_govmailbox_path(box), method: :post, data: {confirm: '确定要删除该信箱？' } %>
			                    </td>
			                </tr>
			             <%- end.blank? %>
			             	<tr><td colspan="4" class="text-center green">没有记录</td></tr>
			             <%- end %>
		                </tbody>
		            </table>
		       <%= paginate @boxes %>
	      	</div>
      </div>
    </div>
<%- end %>
<%= render 'settings_tab' %>

