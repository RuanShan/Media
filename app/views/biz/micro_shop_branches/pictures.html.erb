<% content_for :main_content do %>
<div class="main-content ">
  <div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
      <%= render 'partials/home' %>
      <li><%= link_to '微门店', micro_shops_url %></li>
      <li><%= link_to '门店管理', micro_shop_branches_path %></li>
    </ul>
    <%= render '/layouts/qrcode' %>
  </div>
  <div class="page-content">
    <div class="row">
      <div class="col-sm-12">
        <div class="alert alert-block alert-success">
          <strong class="pull-left">提示：</strong>
          <ul class="vwebsiteHeadAlert">
            <li>门店轮播图最多上传10张图片</li>
          </ul>
        </div>
      </div>
      <div class="col-sm-12">
        <%= form_for @shop_branch, url: micro_shop_branch_path(@shop_branch), class: 'form', html: { method: :put } do |branch| %>
          <%= hidden_field_tag :pic, "1" %>
          <div class="form-group">
            <label class="control-label">门店缩略图<span class="icon-question-sign" data-rel="popover" data-trigger="hover" data-placement="right" data-content="门店列表的缩略图显示" data-original-title="" title=""></span><span class="help-inline text-warning line-height-32">建议尺寸：宽120px * 高120px</span></label>
            <div class="clearfix">
              <div data-name="shop_branch[thumbnail]" data-img = "<%= @shop_branch.thumbnail_url.presence %>" data-key="<%= @shop_branch.thumbnail %>" class="cieldon-file" data-width="120" data-height="120" data-type="0"></div>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label">门店缩略图<span class="help-inline text-warning line-height-32">最多上传10张图片</span></label><br>
            <label class="control-label">按住Ctrl可多选<span class="help-inline text-warning line-height-32">建议尺寸：宽720px * 高400px</span></label>
            <div class="vwebsitePicture col-xs-12 row">
              <ul class="ace-thumbnails thumbnails-1">
                <li>
                  <div class="cieldon-file" data-shop-branch-id="<%= @shop_branch.id %>" data-type="5" data-height="96" data-width="176"></div>
                </li>
                <% @pictures.each do |picture| %>
                  <%= render "biz/micro_shop_branches/picture", {picture: picture} %>
                <% end %>
              </ul>
            </div>
            <div class="clearfix"></div>
          </div>
          <div class="form-group ">
            <button type="submit" class="btn btn-sm btn-primary">确定</button>
            <a href="javascript:;" class="btn btn-sm btn-default" onclick="window.location.href='<%= micro_shop_branches_url %>'">返回</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
<% content_for :custom_js do %>
<% end %>