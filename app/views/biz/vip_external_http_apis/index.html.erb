<% content_for :main_content do %>
    <div class="main-content ">
      <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
          <%= render 'partials/home' %>
          <li><%= link_to '开放接口', spec_vip_api_settings_path %></li>
          <li><%= link_to '会员API', spec_vip_api_settings_path %></li>
          <li><%= link_to '接口设置', vip_api_settings_path %></li>
          <li><%= link_to '接口调用设置', vip_external_http_apis_path %></li>
        </ul>
        <%= render '/layouts/qrcode' %>
      </div>
      <div class="page-content">
        <div class="tabbable">
          <ul class="nav nav-tabs padding-24 tab-size-bigger" id="myTab">
            <%= link_to_li '基础设置', vip_api_settings_path %>
            <%= link_to_li '接口调用设置', vip_external_http_apis_path %>
          </ul>
          <div class="tab-content no-border padding-24">
            <div id="tab2" class="tab-pane fade active in">
              <div class="row">
                <div class="col-sm-12">
                  <button class="btn btn-sm btn-primary pull-right" data-toggle="modals" data-height="1000" data-iframe="<%= new_vip_external_http_api_path %>" data-title="新增">新增</button>
                </div>
                <div class="col-sm-12 margin-top-20">
                  <table id="" class="table table-striped table-bordered table-hover dataTable ">
                    <thead>
                    <tr>
                      <td>接口类型</td>
                      <td>路径</td>
                      <td>HTTP请求方法</td>
                      <td>操作</td>
                    </tr>
                    </thead>
                    <tbody>
                      <% if @vip_external_http_apis.each do |vip_external_http_api| %>
                        <tr>
                          <td><%= vip_external_http_api.api_type_name %></td>
                          <td><%= vip_external_http_api.path %></td>
                          <td><%= vip_external_http_api.http_method_name %></td>
                          <td>
                            <a href="javascript:void(0);" data-height="1000" data-toggle="modals" data-iframe="<%= edit_vip_external_http_api_path(vip_external_http_api) %>" data-title="编辑">编辑</a>
                            <%= link_to '删除', vip_external_http_api, data: { method: :delete, confirm: '确定要删除该接口吗？'} %>
                          </td>
                        </tr>
                      <% end.blank? %>
                        <tr id="no-records">
                          <td colspan="5" class="green text-center">无记录</td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
