<%= form_for @vip_external_http_api, validate: true, html: { role: :form } do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <label class="control-label">接口类型<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.select :api_type, VipExternalHttpApi.api_type_options,{},class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label">接口路径<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.text_field :path, class: "form-control", placeholder: '请求接口的Path，例如： "/api/get_user_info"' %>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label">HTTP请求方法<span class="required-star">*</span></label>
      <div class="clearfix">
        <%= f.select :http_method, VipExternalHttpApi.http_method_options, {readonly: true},class: "form-control" %>
      </div>
    </div>
  </div>
  <%= render 'partials/modalFooter' %>
<% end %>
