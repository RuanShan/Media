<% content_for :main_content do %>
<div class="main-content">
  <div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
      <%= render 'partials/home' %>
      <li><%= link_to '会员卡', vip_users_path %></li>
      <li><%= link_to '会员卡套餐', vip_packages_path %></li>
      <li><%= link_to '服务项目管理', vip_package_items_path %></li>
    </ul>
    <%= render '/layouts/qrcode' %>
  </div>
  <div class="page-content">
    <div class="row">
      <%= form_for(@vip_package_item, validate: true) do |f| %>
        <div class="col-xs-12">
          <div class="form-group">
            <label>服务项目名称<span class="required-star">*</span><small class="help-inline text-warning line-height-32">建议输入12个字以内</small></label>
            <div class="clearfix">
              <%= f.text_field :name, class: 'col-xs-6' %>
            </div>
          </div>
          <div class="form-group">
            <label>价格
              <span class="required-star">*</span>
            </label>
            <div class="clearfix">
              <%= f.text_field :price, class: 'col-xs-6' %>
            </div>
          </div>
          <div class="form-group">
            <label>使用说明</label>
            <div class="clearfix">
              <%= render "shared/form_rich_text", field_name: "description", obj: @vip_package_item, f: f, wrapper_html_options: {class: "col-md-8"}%>
            </div>
          </div>
          <div class="form-group">
            <%= f.submit '保存', class: 'btn btn-sm btn-primary', disable_with: '正在提交中...' %>
            <button type="button" class="btn btn-sm btn-default" data-dismiss="modals" onclick="javascript:history.go(-1);">取消</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>
