<%= form_tag update_pic_website_articles_path(id: @article.id), method: :post  do |f| %>
  <div class="modal-body">
    <div class="col-sm-12">
      <p>图片建议尺寸：200像素*200像素</p>
      <div class="cieldon-file pull-left width-100px cieldon-file-0" data-type="0" data-height="100" data-width="100" data-name="website_article[pic_key]" data-img="<%= @article.pic_url %>" data-key="<%= @article.pic_key %>"></div>
      <a id="clearpic" class="btn btn-default btn-sm margin-left-20" href="javascript:;">删除</a>
    </div>

  </div>
  <%= render 'partials/modalFooter' %>
<% end %>
<% content_for :custom_js do %>
  <script>
    $('#clearpic').click(function(){
      //$.get("<%= delete_pic_website_articles_path(id: @article.id) %>", function(data) {
      //  $('#pic .file-btn a').css('background-image','')
      //});
      $('input[name="pic"]').val('');
      $(this).prev().find('.file-btn a').css('background-image', 'url()');
      $('input[name="website_article[pic_key]"]').val('');
    });
  </script>
<% end %>
