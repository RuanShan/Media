<% content_for :custom_js do %>
    <script type="text/javascript">
        select_website_menu_type();

        $('#website_menu_menu_type').change( function() {
            select_website_menu_type();
        });

        function set_materials_img_css(){
            $('#img-1').css({'display': 'block', 'background-size': '100%', 'width': '100%', 'height': '200px', 'background-repeat': 'no-repeat no-repeat'});
        }

        function cover_pic_dispose(){
            $('#website_menu_is_delete_cover_pic').val('');
        }

        function pic_dispose(){
            $('#website_menu_is_delete_pic').val('');
            $('#website_menu_font_icon').val('');
        }

        function materials(select){
            var self = $(select);
            if(self.val()){
                $.ajax({
                    url: '/materials/'+self.val(),
                    type: "get",
                    dataType : "json",
                    success : function (data){
                        if(data){
                            self.closest('.tab-pane').find('span.title').html(data['title']);
                            self.closest('.tab-pane').find('span.grey').html(data['created_at'].slice(0,10));
                            self.closest('.tab-pane').find('p.grey').html(data['summary']);
                            self.closest('.tab-pane').find('#img-1').css("background-image", 'url(' + data['pic_url'] + ')');
                            set_materials_img_css();
                        }
                    }
                });
            }
            else{
                self.closest('.tab-pane').find('span.title').html('素材标题');
                self.closest('.tab-pane').find('span.grey').html("<%= Date.today %>");
                self.closest('.tab-pane').find('p.grey').html('');
                self.closest('.tab-pane').find('#img-1').attr("background-image", 'url()');
                self.closest('.tab-pane').find('#img-1').attr('style', '');
            }
        }

        function find_activies(select){
            var self = $(select);
            if(self.val()){
                var url = '/website_menus/find_activities?ids=' + self.val();
                if($('#website_menu_id').val()){
                    url += '&id=' +  $('#website_menu_id').val();
                }
                $.ajax({
                    url: url,
                    type: "get",
                    success : function (data){
                        $('#website_menu_activity_id').html(data);
                        return true;
                    },
                    error: function() {
                        return false;
                    }
                });
            }
        }

        function select_website_menu_type() {
            $("#website_menu_qq").closest('.tab-pane').removeClass('active');
            $('#website_menu_content').closest('.tab-pane').removeClass('active');
            $('#website_menu_subtitle').closest('.tab-pane').removeClass('active');
            $('#website_menu_single_material_id').closest('.tab-pane').removeClass('active');
            $('#website_menu_multiple_material_id').closest('.tab-pane').removeClass('active');
            $('#website_menu_activity_id').closest('.tab-pane').removeClass('active');
            $('#website_menu_url').closest('.tab-pane').removeClass('active');
            $('.url-info').addClass('hide');
            $('#website_menu_tel').closest('.tab-pane').removeClass('active');
            $('#website_menu_audio_id').closest('.tab-pane').removeClass('active');
            $('#website_menu_album_id').closest('.tab-pane').removeClass('active');
            $('#website_menu_panoramagram_id').closest('.tab-pane').removeClass('active');
