<%= form_for @website_menu, validate: true, :html => { :class => 'form', id: 'website_menu_form', role: 'form' } do |f| %>
  <%= f.hidden_field :id %>
  <%= f.hidden_field :website_id %>
  <%= f.hidden_field :old_parent_id, value: f.object.parent_id %>

  <div class="form-group ">
    <label class="control-label">站点名称<span class="required-star">*</span></label>
    <div class="clearfix">
      <%= f.text_field :name, class: "col-xs-6", placeholder: "请输入站点名称", maxlength: 32 %>
    </div>
  </div>

  <!--<div class="form-group  ">-->
    <!--<label class="control-label">站点描述</label>-->
    <!--<div class=" clearfix">-->
      <!--<%#= f.text_field :summary, class: "col-xs-6" %>-->
    <!--</div>-->
  <!--</div>-->

    <div class="form-group  ">
      <label class="control-label">站点描述</label>
      <div class=" clearfix">
        <% WebsiteMenu.summary_type_options.each do |k| %>
            <div class="radio radio-inline no-margin-top no-padding-left">
              <label class="control-label">
                <%= f.radio_button :summary_type, k[1], class: 'ace' %>
                <span class="lbl"><%= "#{k[0]}#{k[1] == 3 ? '：' : ''}"%></span>

              </label>
              <%= f.text_field :summary if k[1] == 3 %>
            </div>
        <% end %>
      </div>
    </div>

  <div class="form-group">
    <label class="control-label" style="position: relative;">标题图<small class="help-inline text-warning line-height-32">没有更好的图片?微枚迪给你提供</small><a href="javascript:;" class="btn btn-primary btn-sm btn-toggle" data-target=".icon-box" data-scroll="icon-tab-2">图片素材</a><%= render 'font'%><a href="javascript:;" class="btn btn-default btn-sm delete-img">删除</a><%= f.hidden_field :is_delete_pic %><%= f.hidden_field :font_icon %></label>
    <div class="clearfix">
      <div class="cieldon-file pull-left width-100px" data-type="0" data-width="100" data-height="100" <% if f.object.font_icon.present? %> data-fa="<%= f.object.font_icon %>"  <% else %> data-img="<%= f.object.pic_url %>" <% end %> data-name="website_menu[pic_key]" data-key="<%= f.object.pic_key %>" data-callback="pic_dispose"></div>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label">栏目焦点图<small class="help-inline text-warning line-height-32">栏目焦点图非必须，如果不想显示，点击</small><input type="button" class="btn btn-default btn-sm delete-img" value="删除"/><%= f.hidden_field :is_delete_cover_pic %></label>
    <div class="clearfix">
      <div class="cieldon-file pull-left width-100px" data-type="0" data-width="100" data-height="100" data-img="<%= f.object.cover_pic_url%>" data-name="website_menu[cover_pic_key]" data-key="<%= f.object.cover_pic_key %>" data-callback="cover_pic_dispose"></div>
      <small class="text-warning pull-left margin-top-20">建议尺寸:720*400px</small>
    </div>
  </div>

  <div class="form-group ">
    <label class="control-label">栏目分类<span class="required-star">*</span><small class="help-inline text-warning line-height-32">选择站点栏目的分类</small></label>
    <div class="clearfix" id="selects">
      <%= select_tag "website_name", options_for_select([[@website.name, '0']], selected: params[:website_name]), class: 'menu_category' %>
      <% @menu_categories_selects.each_with_index do |select, index|%>
          <%= select_tag "menu_category_id#{select[0]}", options_for_select([['', '']] + select[1].collect{|t| [t.name, t.id]}, selected: params["menu_category_id#{select[0]}".to_sym]), class: "menu_category", rel: select[0], style: index > 2 ? 'margin-top: 10px;': ''   if select[1].present? %>
      <% end %>
      <%= f.hidden_field :parent_id, class: 'hidden_menu_category_id' %>
    </div>
  </div>

<% unless @website_menu.has_children? %>

  <div class="form-group ">
    <label class="control-label">栏目类型<span class="required-star">*</span><small class="help-inline text-warning line-height-32">根据你的需求，选择站点栏目的类型，文章等大部分栏目类型可以直接在当前页面创建</small><span class="icon-question-sign " data-rel="popovers" data-trigger="hover" data-placement="right" data-contents="<%= render 'info' %>" ></span></label>
    <div class="clearfix">
      <labet class="line-height-32 url-info">
        <span class="icon-question-sign" data-rel="popovers" data-trigger="hover" data-placement="right" data-contents="使用链接方式添加活动项目，易造成用户身份获取问题（如看到他人信息，或者已他人身份参与活动），建议直接调用活动，如需使用链接，请注意不要添加带有openid等参数的链接" data-original-title="" title=""></span>
      </labet>
      <%
         reject_types = [8,10,19]
         menu_type_options = WebsiteMenu.menu_type_options.reject{|m| reject_types.include?(m.last) || m.last == WebsiteMenu::ACTIVITY}
      %>
      <%= f.select :menu_type, menu_type_options, {}, class: 'col-xs-6' %>
    </div>
  </div>

  <div class="form-group">
    <div class="tab-content no-border no-padding" id="tab1">
      <div class="tab-pane active" id="tab-0">
        <div class="form-group ">
          <label class="control-label">详情页副标题<small class="help-inline text-warning line-height-32">适用于大多数详情页模版</small></label>
          <% WebsiteMenu.subtitle_type_options.each_with_index do |subtitle_type, index| %>
              <div class="radio no-padding-left" style="<%= 'margin-top: -5px;' if index == 0 %>">
                <label>
                  <%= f.radio_button :subtitle_type, subtitle_type[1], class: 'ace' %><span class="lbl"><%= subtitle_type[0] %></span>
                </label>
                <%= f.text_field :subtitle, class: "input-text", style: f.object.subtitle_type == WebsiteMenu::SHOW_CONTENT ? 'width: 42%;' : 'width: 42%;display:none;' if subtitle_type[1] == WebsiteMenu::SHOW_CONTENT %>
              </div>
