<div class="main-content ">
  <div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
    </ul>
    <%= render '/layouts/qrcode' %>
  </div>
  <div class="page-content">
    <div class="tabbable">
      <%= render "tabs" %>

      <div class="tab-content no-border padding-24">

        <div id="tab-3" class="tab-pane fade active in">
          <div class="row">
            <div class="col-md-12">
              <div class="alert alert-block alert-success">
                <strong class="pull-left">提示：</strong>
                <ul class="vwebsiteHeadAlert">
                  <li>
                    总使用数：<span class="required-star">
                  <%= @used_sns %></span>张
                  </li>
                </ul>
              </div>
            </div>

            <div class="col-sm-12">
              <%= form_for @search, url: shops_consume_reports_path(supplier_id: current_shop_account.id), html: { method: :get } do |f| %>
                  <div class="col-md-3 row">
                    <div class="input-group input-group-text">
                      <span class="input-group-addon">活动名称：</span>
                      <%= f.select :consumable_id_eq, @activity.coupons.normal.pluck(:name, :id).unshift(['全部', '']), class: "col-xs-12" %>
                    </div>
                  </div>


                  <div class="col-md-6">
                    <div class="input-group input-group-text">
                      <span class="input-group-addon">日期：</span>

                      <div class="input-group">
                        <%= f.text_field :used_at_gte, class: "datepicker input-sm form-control" %>
                        <span class="input-group-addon">-</span>
                        <%= f.text_field :used_at_lte, class: "datepicker input-sm form-control" %>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-3 row">
                    <button class="btn btn-primary btn-sm btn-filter">查询</button>
                    <%= link_to '导出EXCEL', shops_consume_reports_path(supplier_id: current_shop_account.id, format: :xls),
                                class: 'btn btn-primary btn-sm btn-filter' %>
                  </div>
              <%- end %>
            </div>

            <div class="col-md-12 margin-top-20">
              <table id="couponGateTable" class="table table-striped table-bordered table-hover dataTable ">
                <thead>
                <tr>
                  <th>日期</th>
                  <th>使用数</th>
                  <th>总优惠金额（元）</th>
                </tr>
                </thead>

                <tbody>
                <% if @pag_consumes.present? %>
                    <% @pag_consumes.each do |p| %>
                        <% if p[:consume_created].present? || p[:consume_used].present? %>
                            <tr>
                              <td><%= p[:day] %></td>
                              <td><%= p[:consume_used] %></td>
                              <td><%= p[:discount] %></td>
                            </tr>
                        <% end %>
                    <%- end %>
                <%- else %>
                    <tr>
                      <td colspan="4" class="green center">没有记录</td>
                    </tr>
                <% end %>
                </tbody>
              </table>
              <%= paginate @pag_consumes %>
            </div>

          </div>


        </div>
      </div>
    </div>

  </div>
</div>
