              <div class="inline margin-right-20">
                <a href="#consume" class="btn btn-app btn-success" data-toggle="modal">
                  <i class="icon-jpy bigger-230"></i>
                  消费
                </a>
              </div>
            <%- end %>
            <%- if  current_sub_account.can?('manage_vip_recharge')%>
