function showTip(type, str) {
    PNotify.removeAll();
    type = {
        "success": "",
        "warning": 'error'
    }[type];
    var delay = type == 'error' ? 3000 : 1000;
    new PNotify({
        title: '通知',
        text: str,
        type: type,
        remove: true,
        delay: delay,
        styling: 'fontawesome'
    });
    return false;
}

