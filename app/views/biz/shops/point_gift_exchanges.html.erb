<div class="main-content ">

    <%= render 'breadcrumbs' %>

    <div class="page-content">
        <div class="row">
            <div class="col-md-12">
                <table id="exchange" class="table table-striped table-bordered table-hover dataTable J-dataTables" data-url="<%= shops_point_gift_exchanges_path(account_id: current_shop_account.id) %>">
                    <thead>
                    <tr>
                        <th>序号</th>
                        <th>礼品名称</th>
                        <th>用户姓名</th>
                        <th>电话</th>
                        <th>使用时间</th>
                        <th>使用门店</th>
                        <th>SN码</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <!-- /.page-content -->
    <div class="modal fade" id="use">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">礼品券使用</h4>
                </div>


                <div class="modal-body">
                    <div class="form-group">
                        <label>请输入SN码</label>

                        <div class="clearfix">
                            <input type="text" id="sn" class="col-xs-12 col-md-8">
                        </div>
                        <span class="red"></span>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btn-sm js-search" id="exchange-info">使用查询</button>

                </div>

            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <div class="modal fade" id="SNInfo">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">礼品券使用</h4>
                </div>

                <div class="modal-body">
                    <dl class="dl-horizontal dt-250">
                    </dl>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btn-sm js-search" id="use-exchange">立即使用</button>
                </div>

            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>

<% content_for :custom_js do %>
    <script type="text/javascript">
        $(function () {
            App.init();

            $("div.toolbar").remove();
            $("div.dataTables_filter").css('text-align', 'left').append('<%= link_to '导出EXCEL', shops_point_gift_exchanges_path(account_id: current_shop_account.id, format: :xls), class: "btn btn-primary btn-sm" %>');

        });
    </script>
<% end %>
