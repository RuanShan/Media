<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>公告列表</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://www.winwemedia.com/com/css/normalize.css">
  <link rel="stylesheet" href="http://www.winwemedia.com/com/css/nodes.css">
  <link rel="stylesheet" href="http://www.winwemedia.com/com/css/anythingslider.css">
  <script src="http://www.winwemedia.com/assets/com.js" type="text/javascript"></script>
  <script src="http://www.winwemedia.com/com/js/vendor/modernizr-2.6.2.min.js"></script>
</head>
<body>
  <!--[if lt IE 7]>
      <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
  <![endif]-->
  <div class="header">
      <a class="logo" style="background: url(http://www.winwemedia.com/com/images/uzhe_bg.png) no-repeat 0 -60px; width: 300px;"></a>
      <!-- http://www.winwemedia.com/assets/new-uzhe-logo.png -->
  </div>
  <div class="notes">
    <% @dev_logs_hash.each do |year,dev_logs|%>
      <a class="notes-year"><%= year%></a>
      <% dev_logs.each_slice(2) do |dev_logs_pair|%>
        <% left_dev_log = dev_logs_pair.first%>
        <% right_dev_log = dev_logs_pair.last%>
        <div class="notes-circle notes-l">
           <div class="mod-note">
               <b><%= left_dev_log.title %></b>
               <small><%= left_dev_log.created_at.try(:to_date) %></small>
               <p><%= "#{left_dev_log.content_text}".truncate(50) %></p>
               <a class="note-more" href="<%= home_show_dev_log_path(id: left_dev_log.id)%>">[查看详情]</a>
               <em></em>
               <i></i>
           </div>
        </div>

        <% unless left_dev_log == right_dev_log %>
        <div class="notes-circle notes-r">
           <div class="mod-note">
               <b><%= right_dev_log.title %></b>
               <small><%= right_dev_log.created_at.try(:to_date) %></small>
               <p><%= "#{right_dev_log.content_text}".truncate(50) %></p>
               <a class="note-more" href="<%= home_show_dev_log_path(id: right_dev_log.id)%>">[查看详情]</a>
               <em></em>
               <i></i>
           </div>
        </div>
        <% end %>
      <% end %>
    <% end %>

    <!--<div class="note-loading"><img src="assets/img/loading.gif"/></div>-->
    <div class="note-loading">结束了</div>
  </div>



  <script src="http://www.winwemedia.com/com/js/vendor/jquery-1.10.2.min.js"></script>
  <script src="http://www.winwemedia.com/com/js/vendor/jquery.anythingslider.min.js"></script>
  <script src="http://www.winwemedia.com/com/js/plugins.js"></script>
  <script src="http://www.winwemedia.com/com/js/main.js"></script>
  

</body>
</html>
